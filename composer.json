{
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/LitusProject/dbal"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LitusProject/EdpMarkdown"
        },
        {
            "type": "vcs",
            "url": "https://github.com/LitusProject/zendframework"
        }
    ],
    "require": {
        "zendframework/zendframework": "dev-master as 2.4.13",
        "zendframework/zend-developer-tools": "@stable",

        "alcaeus/mongo-php-adapter": "@stable",
        "doctrine/doctrine-orm-module": "@stable",
        "doctrine/doctrine-mongo-odm-module": "@stable",
        "EvanDotPro/EdpMarkdown": "@dev",
        "kriswallsmith/assetic": "1.0.5",
        "packagist/yuicompressor-bin": "@stable",
        "widmogrod/zf2-assetic-module": "1.3.4",
        "zf-commons/zfc-twig": "@stable",

        "twitter/bootstrap": "~3.0.0",
        "sentry/sentry": "@stable"
    },
    "require-dev": {
        "litus/php-cs-fixer": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "": "module/"
        }
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        }
    }
}

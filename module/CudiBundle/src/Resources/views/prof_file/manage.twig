{% extends 'prof/base.twig' %}

{% block content %}
    <div class="flashmessage alert alert-success fade" id="file_uploaded">
	    <a class="close" data-dismiss="alert">&times;</a>
    	<div class="title">{{ translator().translate('Success') }}</div>
    	<div class="content">
    		<p>{{ translator().translate('The file was succesfully uploaded.') }}</p>
    	</div>
    </div>
    <div class="flashmessage alert alert-success fade" id="file_removed_success">
	    <a class="close" data-dismiss="alert">&times;</a>
    	<div class="title">{{ translator().translate('Success') }}</div>
    	<div class="content">
    		<p>{{ translator().translate('The file was succesfully removed.') }}</p>
    	</div>
    </div>
    <div class="flashmessage alert alert-error fade" id="file_removed_error">
	    <a class="close" data-dismiss="alert">&times;</a>
    	<div class="title">{{ translator().translate('Error') }}</div>
    	<div class="content">
    		<p>{{ translator().translate('An error occurred while removing the file.') }}</p>
    	</div>
    </div>
    
	<div class="page-header">
	    <h2>{{ translator().translate('Files') }}</h2>
	</div>
	
	<h3>{{ translator().translate('Article') }}</h3>
	<p>
	    {{ translator().translate('Title') }}: <b>{{ article.getTitle() }}</b><br />
	    {{ translator().translate('Authors') }}: <b>{{ article.getAuthors() }}</b><br />
	    {{ translator().translate('Publisher') }}: <b>{{ article.getPublishers() }}</b><br />
	    {{ translator().translate('Publish Year') }}: <b>{{ article.getYearPublished() }}</b><br />
	    {{ translator().translate('ISBN') }}: <b>{{ article.getISBN() }}</b>
	</p>
	
	<table class="table table-bordered table-striped" id="articleFiles">
        <tr>
            <th width="200px">{{ translator().translate('Name') }}</th>
            <th>{{ translator().translate('Description') }}</th>
            <th width="160px">{{ translator().translate('Actions') }}</th>
        </tr>

        {% for mapping in mappings %}
            <tr class="item">
                <td>{{ mapping.getFile().getName() }}</td>
                <td>{{ mapping.getFile().getDescription() }}</td>
				<td class="actions">
				    {% if hasAccess('prof_file', 'download') %}
						<a href="#" class="btn btn-info downloadFile" data-file="{{ url('prof_file', {"action": "download", "id": mapping.getId(), "language": language.getAbbrev()}) }}">{{ translator().translate('Download') }}</a>
					{% endif %}
					{% if hasAccess('prof_file', 'delete') %}
	                    <a href="#" class="btn btn-danger delete" data-id="{{ mapping.getId() }}" data-name="{{ mapping.getFile().getName() }}" data-description="{{ mapping.getFile().getDescription() }}">{{ translator().translate('Delete') }}</a>
	                {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
    <div class="pull-right">
        <a href="#addFile" class="btn btn-success" data-toggle="modal">{{ translator().translate('Add File') }}</a>
    </div>
    <br class="clear" />
    
    <div id="addFile" class="modal fade">
    	<div class="modal-header">
    		<a class="close" data-dismiss="modal">&times;</a>
    		<h3>{{ translator().translate('Add File') }}</h3>
    	</div>
    	<div class="modal-body">
    		{% autoescape false %}
    		    {{ form }}
    		{% endautoescape %}
    	</div>
    	<div class="modal-footer">
    		<button class="btn btn-success save">{{ translator().translate('Save') }}</button>
    		<button class="btn" data-dismiss="modal">{{ translator().translate('Cancel') }}</button>
    	</div>
    </div>
    
    <div class="modal fade" id="progressModal">
        <div class="modal-header">
        	<h3>{{ translator().translate('Upload File') }}</h3>
        </div>
    	<div class="modal-body">
    		<p>
    			{{ translator().translate('Your files are being uploaded.') }}
    		</p>
    		<p>
    			<div class="progress progress-striped active">
    			    <div class="bar" style="width: 100%;"></div>
    			</div>
    		</p>
    	</div>
    </div>
    
    <div class="modal fade" id="removeFile">
    	<div class="modal-header">
    		<a class="close" data-dismiss="modal">&times;</a>
    		<h3>{{ translator().translate('Delete File') }}</h3>
    	</div>
    	<div class="modal-body">
    		<p>
    			{{ translator().translate('You are about to delete the following file') }}: <b class="fileName"></b> (<b class="fileDescription"></b>)!<br />
    			{{ translator().translate('Please note that this operation cannot be undone!') }}
    		</p>
    		<p>
    			{{ translator().translate('Are you sure you want to continue?') }}
    		</p>
    	</div>
    	<div class="modal-footer">
    		<button class="btn btn-danger confirm">{{ translator().translate('Yes') }}</button>
    		<button class="btn" data-dismiss="modal">{{ translator().translate('No') }}</button>
    	</div>
    </div>
{% endblock %}

{% block content_script %}
	<script type="text/javascript">
		$(document).ready(function () {
			$('.downloadFile').each(function () {
				$(this).downloadFile($(this).data('file'));
			});
			
			$('.item .delete').click(openDeleteModal);
			
			$('#addFile .save').click(function () {
			    $('#addFile form').submit();
			});
			
			$('#uploadFile').formUploadProgress({
			    url: '{{ url('prof_file', {"action": "progress", "language": language.getAbbrev()}) }}',
			    name: '{{ uploadProgressId }}',
			    uploadProgressName: '{{ uploadProgressName }}',
			    interval: 1000,
			    onProgress: function (data) {
			        $('#progressModal').find('.bar').width(((data.bytes_processed / data.content_length) * 100) + '%');
			    },
			    onSubmitted: function (data) {
			        if (data.errors) {
			            $('#file_uploaded').removeClass('in');
				        $('#uploadFile').find('ul.errors').remove();
				        for(element in data.errors) {
				            var list = $('<ul>', {class: 'errors'})
				            for (error in data.errors[element])
				                list.append($('<li>').html(data.errors[element][error]));
				            $('#uploadFile').find('#' + element).parent().parent().after(list);
				        }
				    } else if (data.info) {
				        $('#uploadFile').resetForm();
				        $('#file_uploaded').addClass('in');
				        
				        var item = $('<tr>', {class: 'item'});
				        item.append(
				            $('<td>').html(data.info.name),
				            $('<td>').html(data.info.description),
				            actions = $('<td>', {class: 'actions'})
				        );
				        
				        {% if hasAccess('prof_file', 'download') %}
				            actions.append(downloadFile = $('<a>', {class: 'btn btn-info downloadFile'}).html('{{ translator().translate('Download') }}'), ' ');
				            downloadFile.downloadFile('{{ url('prof_file', {"action": "download", "language": language.getAbbrev()}) }}/' + data.info.id);
				        {% endif %}
				        {% if hasAccess('prof_file', 'delete') %}
				            actions.append(deleteFile = $('<a>', {class: 'btn btn-danger delete'}).html('{{ translator().translate('Delete') }}'));
				            deleteFile.data(data.info)
				                .click(openDeleteModal);
				        {% endif %}
				        
				        $('#articleFiles').append(item);
				        $('#progressModal').permanentModal('hide');
				    }
			    },
			    onSubmit: function () {
			        $('#file_uploaded').removeClass('in');
			        var progressModal = $('#progressModal');
			        $('#addFile').modal('hide');
			        progressModal.permanentModal('open');
			    },
			    onError: function () {
			        $('#file_uploaded').removeClass('in');
			        var progressModal = $('#progressModal');
			        progressModal.permanentModal('hide');
			    }
			});
		});
		
		function openDeleteModal(e) {
			var $this = $(this);
			
			e.preventDefault();
			var removeFile = $('#removeFile');
			removeFile.find('.fileName').html($(this).data('name'));
			removeFile.find('.fileDescription').html($(this).data('description'));
			removeFile.find('.confirm').unbind('click').click(function () {
				$.post('{{ url('prof_file', {"action": "delete", "language": language.getAbbrev()})}}/' + $this.data('id'), function  (data) {
				    if (data && 'success' == data.status) {
		                $('.flashmessage').removeClass('in');
						$('#file_removed_success').addClass('in');
						$this.parent().parent().remove();
						removeFile.modal('hide');
					} else {
					    errorRemove();
					}
				}, 'json').error(errorRemove);
			});
			removeFile.modal();
		}
		
		function errorRemove() {
		    $('.flashmessage').removeClass('in');
			$('#file_removed_error').addClass('in');
		    $('#removeFile').modal('hide');
		}
	</script>
{% endblock %}

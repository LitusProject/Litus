{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_order/partials/navigation.twig' %}
	
	{% include 'admin/partials/flashMessenger.twig' %}

	<div id="controller_action">
		<div class="error_message flashmessage full_width">
		    <div class="title">Warning</div>
		    <div class="content">
				<p>
					You are about to delete the following order item: <b>{{ item.getArticle().getTitle() }}</b>: (x {{ item.getNumber()}})!
					Please note that this operation cannot be undone!
				</p>
				<p>
					Are you sure you want to continue?<br />
					<a href="{{ url('admin_order', {"action": "delete", "id": item.getId(), "confirm": 1}) }}">Yes</a>
					<a href="{{ url('admin_order', {"action": "delete", "id": item.getId(), "confirm": 0}) }}">No</a>
				</p>
		    </div>
		</div>
	</div>
{% endblock %}
{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'cudi/admin/sales/financial/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div id="controller_action">
        {% if organisations|length > 1 %}
            <div style="padding:4px;text-align:right">
                Organisation:
                <select id="organisationField">
                    <option value="all">All</option>
                    {% for organisation in organisations %}
                        <option value="{{ organisation.getId() }}">{{ organisation.getName() }}</option>
                    {% endfor %}
                </select>
            </div>
        {% endif %}

        <table class="full_width manage">

            <tr>
                <th>Manager</th>
                <th width="110px">Start</th>
                <th width="110px">End</th>
                <th width="135px">Theoretical Revenue</th>
                <th width="105px">Actual Revenue</th>
                <th width="90px">Delta</th>
                <th width="60px">Action</th>
            </tr>

            {% for session in paginator %}
                <tr class="item">
                    <td>{{ session.getManager().getFullName() }}</td>
                    <td>{{ session.getOpenDate().format('Y-m-d H:i') }} </td>
                    <td>{% if not session.isOpen() %}{{ session.getCloseDate().format('Y-m-d H:i') }}{% endif %}</td>
                    {% set theoreticalRevenue = session.getTheoreticalRevenue() %}
                    {% set actualRevenue = session.getActualRevenue() %}
                    <td class="organisation organisation-all">&euro; {{ (theoreticalRevenue/100)|number_format(2) }}</td>
                    <td class="organisation organisation-all">&euro; {{ (actualRevenue/100)|number_format(2) }}</td>
                    <td class="organisation organisation-all">&euro; {% if theoreticalRevenue - actualRevenue < 0 %}+{% endif %}{{ ((actualRevenue - theoreticalRevenue)/100)|number_format(2) }}</td>
                    {% for organisation in organisations %}
                        {% set theoreticalRevenue = session.getTheoreticalRevenue(organisation) %}
                        {% set actualRevenue = session.getActualRevenue() %}
                        <td class="organisation organisation-{{ organisation.getId() }}" style="display: none;">&euro; {{ (theoreticalRevenue/100)|number_format(2) }}</td>
                        <td class="organisation organisation-{{ organisation.getId() }}" style="display: none;">&euro; {{ (actualRevenue/100)|number_format(2) }}</td>
                        <td class="organisation organisation-{{ organisation.getId() }}" style="display: none;">&euro; {% if theoreticalRevenue - actualRevenue < 0 %}+{% endif %}{{ ((actualRevenue - theoreticalRevenue)/100)|number_format(2) }}</td>
                    {% endfor %}
                    <td class="actions">
                        {% if hasAccess('admin_sales_session', 'edit') %}
                            <a href="{{ url("admin_sales_session", {"action": "edit", "id": session.getId()}) }}" class="edit">Edit</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#organisationField').change(function() {
                $('.item .organisation').hide();
                $('.item .organisation-' + $(this).find(':selected').val()).show();
            });
        });
    </script>
{% endblock %}
{% if organisations|length > 1 %}
<header id="controller_sub_header">
    <nav id="controller_sub_nav">
        <ul>
            {% set found = false %}
            {% for organisation in organisations %}
                {% if currentOrganisation.getId() == organisation.getId() %}
                    {% set found = true %}
                {% endif %}
            {% endfor %}
            <li>
                <a {% if not found %} class="active" {% endif %}
                    href="{% if currentSemester != 0 %}
                        {{ url('admin_stock', {'action': 'manage', 'semester': currentSemester}) }}
                    {% else %}
                        {{ url('admin_stock', {'action': 'manage'}) }}
                    {% endif %}">All</a>
            </li>
            {% for organisation in organisations %}
                <li>
                    <a {% if currentOrganisation.getId() == organisation.getId() %} class="active" {% endif %}
                    href="{% if currentSemester != 0 %}
                        {{ url('admin_stock', {'action': 'manage', 'semester': currentSemester, 'organisation': organisation.getId()}) }}
                    {% else %}
                        {{ url('admin_stock', {'action': 'manage', 'organisation': organisation.getId()}) }}
                    {% endif %}">{{ organisation.getName() }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
</header>
{% endif %}
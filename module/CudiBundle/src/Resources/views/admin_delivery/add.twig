{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_delivery/partials/navigation.twig' %}
	
	{% include 'admin/partials/flashMessenger.twig' %}
	
	<div id="controller_action">
		{% autoescape false %}
			{{ form }}
		{% endautoescape %}
		
		<br style="clear:both"/>
			
		<h1>Last deliveries</h1>
		<table>
	    
	        <tr>
	            <th>Date</th>
	            <th>Article</th>
	            <th>Number</th>
	            <th>Price</th>
				<th>Actions</th>
	        </tr>
	        
	        {% for delivery in deliveries %}
	
	            <tr>
	                <td>{{ delivery.getDate().format('Y-m-d H:i:s') }}</td>
	                <td><?= $item->getArticle()->getTitle(); ?></td>
	                <td><?= $item->getNumber(); ?></td>
	                <td>&euro; <?= number_format($item->getPrice()/100, 2); ?></td>
					<td>
						<a href="<?= $this->url(array('action' => 'delete', 'id' => $item->getId())); ?>" class="delete">Delete</a>
					</td>
	            </tr>
	    
	        {% endif %}
	    </table>
	</div>
	
	<aside>
		<div class="sidebox">
	        <div class="title">Overview deliveries</div>
	       	<div class="content">
		    	<p>
		        	<i>Please hit the link below to view all deliveries!</i>
		        </p>
		        <p>
		           	<a href="<?= $this->url(array('action' => 'overview')); ?>">&rarr; Overview deliveries</a>
		        </p>
		    </div>
		</div>
	</aside>
{% endblock %}
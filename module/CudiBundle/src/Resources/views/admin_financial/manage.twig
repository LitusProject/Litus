{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_financial/partials/navigation.twig' %}
	
	{% include 'admin/partials/flashMessenger.twig' %}

	<div id="controller_action">
		<table class="full_width">
		
		    <tr>
		        <th>Manager</th>
		        <th>Open?</th>
		        <th>Start</th>
		    	<th>End</th>
		        <th>Theoretical Revenue</th>
		        <th>Actual Revenue</th>
		        <th>Delta</th>
				<th>Action</th>
		    </tr>
		    
		    {% for session in paginator %}
		        <tr>
		            <td>{% if session['id'] is not sameas(null) %}{{ session['username'] }}{% else %}guest{% endif %}</td>
		            <td>{% if session['open'] %}yes{% else %}no{% endif %}</td>
		            <td>{{ session['openDate'] }} </td>
		            <td>{% if not session['open'] %}{{ session['closeDate'] }}{% endif %}</td>
		            <td>{{ session['theoreticalrevenue']/100 }}</td>
		            <td>{{ session['actualrevenue']/100 }}</td>
		            <td>{% if session['theoreticalrevenue'] - session['actualrevenue'] < 0 %}+{% endif %}{{ session['actualrevenue']/100 - session['theoreticalrevenue']/100 }}</td>
					<td><a href="{{ url("admin_sale", {"action": "edit", "id": session['id']}) }}" class="edit">Edit</a></td>
		        </tr>
		    {% endfor %}
		</table>
		
		{% include 'admin/partials/paginationControl.twig' %}
	</div>
{% endblock %}

{% extends 'sale/base.twig' %}

{% block content %}
	{% autoescape false %}
		{{ form }}
	{% endautoescape %}
{% endblock %}

{% block content_script %}
	<script type="text/javascript">
	    $(document).ready(function () {
	        $('#personSearch').typeaheadRemote(
	            {
	                source: '{{ url("admin_academic_typeahead")}}',
	            }
	        ).change(function (e) {
	            if ($(this).data('value')) {
	                $('#personId').val($(this).data('value').id);
	            } else {
	                $('#personId').val('');
	            }
	        });
	    });
	</script>
{% endblock %}

{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_sales_article/partials/navigation.twig' %}
	
	{% include 'admin/partials/flashMessenger.twig' %}
	
	<div id="controller_action">
		<div id="default_page">
			<table class="full_width">
		        <tr>
		            <th>Title</th>
		            <th width="100px">Author</th>
		            <th width="180px">Publisher</th>
		            <th width="100px">Sell Price</th>
		            <th width="120px">Action</th>
		        </tr>
		        
		        {% for article in paginator %}
		            <tr class="item">
		                <td>{{ article.getMainArticle().getTitle() }}</td>
		                <td>{{ article.getMainArticle().getAuthors() }}</td>
		                <td>{{ article.getMainArticle().getPublishers() }}</td>
		                <td>&euro; {{ (article.getSellPrice()/100)|number_format(2) }}</td>
						<td>
						    {% if hasAccess('admin_article', 'edit') %}
		                        <a href="{{ url('admin_article', {"action": "edit", "id": article.getId()}) }}" class="edit">Edit</a>
		                    {% endif %}
						    {% if hasAccess('admin_article', 'delete') %}
		                        <a href="#" class="delete" data-id="{{ article.getId() }}" data-title="{{ article.getTitle() }}" data-authors="{{ article.getMetaInfo().getAuthors() }}">Delete</a>
		                    {% endif %}
		                </td>
		            </tr>
		        {% endfor %}
		    </table>
	
			{% include 'admin/partials/paginationControl.twig' %}
		</div>
	</div>
{% endblock %}
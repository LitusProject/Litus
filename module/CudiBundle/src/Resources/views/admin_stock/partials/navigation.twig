<header id="controller_header">
    <div class="title"><span class="stock">Stock</span></div>

    <nav id="controller_nav">
        <ul>
        	{% if hasAccess('admin', 'order', 'index') %}
                <li><a {% if 'orders' == getParam('action') %} class="active" {% endif %} href="{{ url('admin_order') }}">Orders</a></li>
            {% endif %}
            {% if hasAccess('admin', 'delivery', 'index') %}
                <li><a {% if 'deliveries' == getParam('action') %} class="active" {% endif %} href="{{ url('admin_stock') }}">Deliveries</a></li>
            {% endif %}
            {% if hasAccess('admin', 'stock', 'overview') %}
                <li><a {% if 'manage' == getParam('action') %} class="active" {% endif %} href="{{ url('admin_stock') }}">Overview</a></li>
            {% endif %}
        </ul>
    </nav>
</header>
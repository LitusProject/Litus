{{ doctype() }}

<html lang="en">
<head>

    {{ headMeta() }}
	{{ headTitle('Litus Supplier', 'PREPEND') }}

	{{ headLink() }}
</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a href="{{ unionUrl }}" class="brand"><img src="/_cudi/img/logo.png" /></a>
			<ul class="nav">
				{% if hasAccess('supplier_index', 'index') %}
					<li {% if 'index' == getParam('action') and 'supplier_index' == getParam('controller') %} class="active" {% endif %}>
					    <a href="{{ url("supplier_index", {"language": language.getAbbrev()}) }}">{{ translate('Home') }}</a>
					</li>
				{% endif %}
				{% if hasAccess('supplier_article', 'manage') %}
					<li {% if 'supplier_article' == getParam('controller') %} class="active" {% endif %}>
					    <a href="{{ url("supplier_article", {"language": language.getAbbrev()}) }}">{{ translate('Articles') }}</a>
					</li>
				{% endif %}
			</ul>
			<ul class="nav pull-right lang-nav visible-desktop">
			    <li class="dropdown" id="langDropdown">
				    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
				        {{ translate('Language') }} <span class="caret"></span>
			        </a>
			        <ul class="dropdown-menu">
			            {% for language in languages %}
				            <li>
				                <a href="{{ url("supplier_index", {"language": language.getAbbrev()}) }}">{{ translate(language.getName()) }}</a>
				            </li>
			            {% endfor %}
			        </ul>
				</li>
			</ul>
			<ul class="nav pull-right auth-nav">
			    {% if authenticatedPerson is not null %}
			        <li class="dropdown" id="accountDropdown">
			            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
			                <span class="profile-wrapper">
			                    <i class="profile"></i>
			                </span>
			                <span class="caret"></span>
			            </a>
			            <ul class="dropdown-menu">
			                <li>
			                    <a href="">
			                        <b class="fullName">{{ authenticatedPerson.getFullName() }}</b>
			                        <small class="metadata">{{ supplier.getName() }}</small>
			                    </a>
			                </li>
			                <li class="divider"></li>
			                <li>
			                    <a href="{{ url("supplier_auth", {"action": "logout", "language": language.getAbbrev()}) }}">{{ translate('Logout') }}</a>
			                </li>
			            </ul>
			        </li>
			    {% else %}
    			    <li class="dropdown" id="loginDropdown">
    			        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
    			            {{ translate('Login') }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                {% autoescape false %}
                                    {{ loginForm }}
                                {% endautoescape %}
                            </li>
                        </ul>
    			    </li>
    			{% endif %}
			</ul>
		</div>
	</div>
</nav>

<header>
	<div class="inner">
		<div class="container">
			<h1>{{ translate('Litus Supplier') }}</h1>
		</div>
	</div>
</header>

<div class="container">
	{% include 'supplier/partials/flashMessenger.twig' %}

	<div id="content_controller">
	    {% block content %} {% endblock %}
	</div>

	<footer>
	    Litus Cudi | Code by <a href="http://litus.cc">Litus</a>

		{% if 'development' == environment %}
		    <span class="development_information">
		    	Execution Time: {{ developmentInformation.executionTime }} ms | Doctrine's UoW: {{ developmentInformation.doctrineUnitOfWork }}
		    </span>
		{% endif %}
	</footer>
</div>

{{ inlineScript() }}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.dropdown form').on('click', function (e) {
                e.stopPropagation()
            });
        });
    </script>
{% endblock %}

</body>
</html>

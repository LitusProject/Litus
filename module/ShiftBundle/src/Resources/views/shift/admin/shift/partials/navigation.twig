<header id="controller_header">
    <div class="title"><span class="shift">Shifts</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('admin_shift', 'add') %}
                <li><a {% if 'add' == getParam('action') %} class="active" {% endif %} href="{{ url("admin_shift", {"action": "add"}) }}">Add</a></li>
            {% endif %}
            {% if hasAccess('admin_shift', 'manage') %}
                <li><a {% if 'manage' == getParam('action') or 'edit' == getParam('action') %} class="active" {% endif %} href="{{ url("admin_shift", {"action": "manage"}) }}">Manage</a></li>
            {% endif %}
        </ul>
    </nav>
</header>

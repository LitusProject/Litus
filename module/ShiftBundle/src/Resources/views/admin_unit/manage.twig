{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_unit/partials/navigation.twig' %}

	{% include 'admin/partials/flashMessenger.twig' %}
    <div class="flashmessage success_message full_width unit_removed_success hide">
    	<div class="title">Success</div>
    	<div class="content">
    		<p>The unit was successfully removed!</p>
    	</div>
    </div>
    <div class="flashmessage error_message full_width unit_removed_error hide">
    	<div class="title">Error</div>
    	<div class="content">
    		<p>An error occurred while trying to delete the unit.</p>
    	</div>
    </div>

	<div id="controller_action">
	    <table class="full_width manage">
	        <thead>
	            <tr>
	                <th>Name</th>
	                <th width="70px">Actions</th>
	            </tr>
	        </thead>

	        <tbody>
	            {% for unit in paginator %}
	                <tr class="item item-{{ unit.getId() }}">
	                    <td>{{ unit.getName() }}</td>
	                    <td class="actions">
	                        {% if hasAccess('admin_unit', 'edit') %}
	                            <a href="{{ url('admin_unit', {"action": "edit", "id": unit.getId()}) }}" class="edit">Edit</a>
	                        {% endif %}
	                        {% if hasAccess('admin_unit', 'delete') %}
	                            <a href="#" data-id="{{ unit.getId() }}" data-name="{{ unit.getName() }}" class="delete">Delete</a>
	                        {% endif %}
	                    </td>
	                </tr>
	            {% endfor %}
	        </tbody>
	    </table>

		{% include 'admin/partials/paginationControl.twig' %}
	</div>

	<div class="modal hide fade" id="removeUnit">
		<div class="modal-header">
			<span>Litus Admin</span>
			/Delete Unit
		</div>
		<div class="modal-body">
			<p>
				You are about to delete the unit with the following name: <b class="name"></b>?
				Please note that this operation cannot be undone!
			</p>
			<p>
				Are you sure you want to continue?
			</p>
			<div class="footer">
				<input type="button" class="delete" value="Yes">
				<input type="button" class="cancel" data-dismiss="modal" value="No">
			</div>
		</div>
	</div>
{% endblock %}

{% block content_script %}
	<script type="text/javascript">
		$(document).ready(function () {
			$('.item .delete').click(openModal);
		});

		function openModal(e) {
			var $this = $(this);
			e.preventDefault();
			var removeUnit = $('#removeUnit');
			removeUnit.find('.name').html($(this).data('name'));
			removeUnit.find('.cancel').one('click', function () {
				removeUnit.modal('hide');
			});
			var id = $this.data('id');
			removeUnit.find('.delete').unbind('click').click(function () {
				$.post('{{ url('admin_unit', {"action": "delete"})}}/' + id, function (data) {
				    if (data && 'success' == data.status) {
						$('.flashmessage').addClass('hide');
						$('.unit_removed_success').removeClass('hide');
						$('.item-' + id).remove();
						removeUnit.modal('hide');
					} else {
					    errorRemove();
					}
				}, 'json').error(errorRemove);
			});
			removeUnit.modal();
		}

		function errorRemove() {
		    $('.flashmessage').addClass('hide');
		    $('.unit_removed_error').removeClass('hide');
		    $('#removeUnit').modal('hide');
		}
	</script>
{% endblock %}

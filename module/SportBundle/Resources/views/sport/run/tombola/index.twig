{{ doctype() }}
<html lang="en" style="height:100%;">
<head>

    {{ headMeta() }}
    {{ headTitle('24h Run', 'PREPEND') }}

    {{ headLink() }}
</head>

<body class="screen-wall"
      style="background-image:url('/_run/img/lion.jpg'); height:100%; background-position:center bottom; background-repeat: no-repeat; background-size: 100% auto;">
<div class="container">
    {% include 'run/partials/flashMessenger.twig' %}

    <div class="flashmessage alert alert-success fade" id="added_success">
        <a class="close">&times;</a>
        {{ translate('You have been succesfully registered for the tombola.') }}
    </div>

    <div class="page-header">
        <h1>{{ translate('Tombola') }}</h1>
    </div>

    <div class="row">
        <div class="col-md-3 justify">
            <p>{{ translate('Register for the tombola by filling out this form. Runners who sign up for the tombola can choose a happy hour slot of 3 hours during which their points will be counted double. For a happy hour between 2AM and 11AM, we even triple your points!<br /><br />Possible prizes:<br />1. Garmin Forerunner 235<br />2. 1-Year Netflix subscription<br />3. 1-Year Spotify Premium<br />4. Nike gift cheque(&euro;100)<br />5. Decathlon gift cheque (&euro;100) (2x)<br />6. bol.com gift cheque (&euro;50) (4x)') }}</p>
            <h2>{{ translate('Scoring') }}</h2>
            <ul>
                <li>&lt;= 1'29": 1 {{ translate('point') }}</li>
                <li>&lt;= 1'27": 3 {{ translate('points') }}</li>
                <li>&lt;= 1'25": 4 {{ translate('points') }}</li>
                <li>&lt;= 1'22": 6 {{ translate('points') }}</li>
                <li>&lt;= 1'19": 8 {{ translate('points') }}</li>
                <li>&lt;= 1'15": 10 {{ translate('points') }}</li>
            </ul>

            <div class="flashmessage alert alert-danger fade" id="identification_error">
                <a class="close">&times;</a>

                <div class="content">
                    {{ translate('No person found with this university identification. Please fill in the correct one or fill in the first and last name manualy.') }}
                </div>
            </div>
        </div>
        <div class="col-md-9" id="tombola-form">
            {% import 'site/partials/form.twig' as forms %}
            {{ forms.renderForm(form) }}
        </div>
    </div>
</div>

{{ inlineScript() }}

<script type="text/javascript">
    $(document).ready(function () {
        $(document).runQueue({
            url: '{{ socketUrl }}',
            key: '{{ key }}',
            authSession: '{{ authSession.getId() }}',
            errorDialog: $('#loading_queue_error'),
        });
        $('#tombola-form form').submit(function (e) {
            $('#added_success').addClass('in');
            setTimeout(function () {
                $('.flashmessage').removeClass('in')
            }, 2000);
            initializeForm();
        });

        $('#first_name, #last_name, #university_identification').keyup(function () {
            if ($('#first_name').val() != '' && $('#last_name').val() != '') {
                $('#queue').removeProp('disabled');
            } else {
                $('#queue').prop('disabled', 'disabled');
            }
        });

        $('#university_identification').bind('keyup blur', getName)
                .keydown(function (event) {
                    if (event.keyCode == 13) {
                        event.preventDefault();
                        return false;
                    }
                });

        $('#university_identification').each(function () {
            $(this).trigger('keyup');
        });
    });

    function initializeForm() {
        $('.required').hide();
        $('#university_identification').focus();
    }
    initializeForm();

    function getName() {
        var $this = $(this);
        var val = $(this).val().trim();
        var fieldSet = $this.closest('fieldset');
        fieldSet.find('#first_name').val('').removeProp('disabled');
        fieldSet.find('#last_name').val('').removeProp('disabled', '');
        if (8 == val.length) {
            $.get('{{ url('sport_run_tombola', {"action": "getName"})}}' + val, function (data) {
                if ($this.val().trim() == val) {
                    $('.required').show();
                    if (data && 'success' == data.status) {
                        fieldSet.find('#first_name').val(data.firstName).addClass('uneditable-input').attr('disabled', 'disabled');
                        fieldSet.find('#last_name').val(data.lastName).addClass('uneditable-input').attr('disabled', 'disabled');
                        if (data.department != null) {
                            fieldSet.find('#departments').val(data.department);
                        }
                        $('#queue').removeProp('disabled');
                    } else {
                        $('#identification_error').addClass('in');
                    }
                }
            }, 'json');
        } else {
            $('.required').hide();
        }
    }
</script>

</body>
</html>

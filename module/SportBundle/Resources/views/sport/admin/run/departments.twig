{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'sport/admin/run/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div id="controller_action">
        <table class="full_width">
            <thead>
                <tr>
                    <th>Name</th>
                    <th width="100px">Happy Hours</th>
                    <th width="100px">Points</th>
                </tr>
            </thead>

            <tbody>
                {% for department in paginator %}
                    <tr>
                        <td>{{ department.getName() }}</td>
                        <td>
                            {% for happyHour in group.getHappyHours() %}
                                {{ happyHour }}{% if not loop.last %},{% endif %}
                            {% endfor %}
                        </td>
                        <td>{{ department.getPoints(academicYear) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>
{% endblock %}

{% extends 'logistics/base.twig' %}
{% import 'site/partials/form.twig' as forms %}

{% block content %}
    <a class="btn btn-default" href="{{ url('logistics_catalog', {"action" : 'view', "order" : order.getId()}) }}" >
        {{ translate('Back') }}
    </a>

    <div class="page-header" style="overflow: hidden; margin-top: 10px">
        <div style="float:left;">
            <h1>{{ translate('Add Order') }}</h1>
        </div>
        <div class="pull-right" style="margin-top: 30px;">

        </div>
    </div>
    <div>{{ translate("If you don't see your location as a possible option, put it in the description (be as complete as possible). ") }}</div>
    <br>
    <h4>{{ translate('Name') }}: <b>{{ order.getName() }}</b></h4>
    <br>

    {{ forms.renderForm(form) }}
{% endblock %}


{{ doctype() }}

<html lang="en">
<head>

    {{ headMeta() }}
    {{ headTitle('Litus Logistics', 'PREPEND') }}

    {{ headLink() }}
</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a href="{{ unionUrl }}" class="brand"><img src="/_logistics/img/logo.png" /></a>
            <ul class="nav">
                {% if hasAccess('logistics_index', 'index') %}
                    <li {% if 'index' == getParam('action') and 'logistics_index' == getParam('controller') %} class="active" {% endif %}>
                        <a href="{{ url("logistics_index", {"language": language.getAbbrev()}) }}">{{ translate('Home') }}</a>
                    </li>
                {% endif %}
            </ul>
            <ul class="nav pull-right lang-nav visible-desktop">
                <li class="dropdown" id="langDropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        {{ translate('Language') }} <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        {% for language in languages %}
                            <li>
                                <a href="{{ url("logistics_index", {"language": language.getAbbrev()}) }}">{{ translate(language.getName()) }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<header>
    <div class="inner">
        <div class="container">
            <h1>{{ translate('Logistics') }}</h1>
        </div>
    </div>
</header>

<div class="container">
    {% include 'logistics/partials/flashMessenger.twig' %}

    <div id="content_controller">
        {% block content %} {% endblock %}
    </div>

    <footer>
        Litus Logistics | Code by <a href="http://litus.cc">Litus</a>

        {% if 'development' == environment %}
            <span class="development_information">
                Execution Time: {{ developmentInformation.executionTime }} ms | Doctrine's UoW: {{ developmentInformation.doctrineUnitOfWork }}
            </span>
        {% endif %}
    </footer>
</div>

{{ inlineScript() }}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.dropdown form').on('click', function (e) {
                e.stopPropagation()
            });
        });
    </script>
{% endblock %}

</body>
</html>

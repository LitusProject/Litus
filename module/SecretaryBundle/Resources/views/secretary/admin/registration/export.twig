{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'admin/partials/flashMessenger.twig' %}

    {% include 'secretary/admin/registration/partials/navigation.twig' %}

    {% include 'secretary/admin/registration/partials/years.twig' %}

    {% include 'secretary/admin/registration/partials/organizations.twig' %}

    <div id="controller_action">
        <input type="button" class="download downloadFile" data-file="{{ url('secretary_admin_registration', {"action": "download", "academicyear": activeAcademicYear.getCode(), "organization": currentOrganization.getId()}) }}" value="Download " style="padding-left: 18px;cursor: pointer;border-width: 2px;" />
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.downloadFile').each(function () {
                $(this).downloadFile($(this).data('file'));
            });
        });
    </script>
{% endblock %}

{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_page/partials/navigation.twig' %}

	{% include 'admin/partials/flashMessenger.twig' %}
    <div class="flashmessage success_message page_category_removed_success hide">
    	<div class="title">Success</div>
    	<div class="content">
    		<p>The category was successfully removed!</p>
    	</div>
    </div>
    <div class="flashmessage error_message page_category_removed_error hide">
    	<div class="title">Error</div>
    	<div class="content">
    		<p>An error occurred while trying to delete the category.</p>
    	</div>
    </div>

	<div id="controller_action">
	    <table class="manage">
	        <thead>
	            <tr>
	                <th>Name</th>
	                <th width="70px">Action</th>
	            </tr>
	        </thead>

	        <tbody>
	            {% for page_category in paginator %}
	                <tr class="item">
	                    <td>{{ page_category.getTitle(language) }}</td>
	                    <td>{{ dateLocalized(page_category.getCreationTime(), 'dd/MM/y H:m') }}</td>
	                    <td>{{ page_category.getUpdatePerson().getFullName() }}</td>
	                    <td class="actions">
	                        {% if hasAccess('admin_page_category', 'edit') %}
	                            <a href="{{ url('admin_page_category', {"action": "edit", "id": page_category.getId()}) }}" class="edit">Edit</a>
	                        {% endif %}
	                        {% if hasAccess('admin_news', 'delete') %}
	                            <a href="#" data-id="{{ page_category.getId() }}" data-title="{{ page_category.getTitle(language) }}" class="delete">Delete</a>
	                        {% endif %}
	                    </td>
	                </tr>
	            {% endfor %}
	        </tbody>
	    </table>

		{% include 'admin/partials/paginationControl.twig' %}
	</div>

	<aside>
		<div class="sidebox">
		    <div class="title">Categories</div>
		    <div class="content">
		        <p>
		            <i>Categories are used to create a structure for the pages.</i>
		        </p>
		    	<p>
		    		{% if hasAccess('admin_page_category', 'add') %}
		    			<a href="{{ url('admin_page_category', {"action": "add"}) }}">&rarr; Add Category</a>
		    		{% endif %}
		    		{% if hasAccess('admin_page_category', 'manage') %}
		    			<a href="{{ url('admin_page_category', {"action": "manage"}) }}">&rarr; Manage Categories</a>
		    		{% endif %}
		    	</p>
		    </div>
		</div>
	</aside>

	<div class="modal hide fade" id="removePageCategory">
		<div class="modal-header">
			<span>Litus Admin</span>
			/Delete page_category
		</div>
		<div class="modal-body">
			<p>
				You are about to delete the following page_category: <b class="title"></b>?
				Please note that this operation cannot be undone!
			</p>
			<p>
				Are you sure you want to continue?
			</p>
			<div class="footer">
				<input type="button" class="delete" value="Yes">
				<input type="button" class="cancel" data-dismiss="modal" value="No">
			</div>
		</div>
	</div>
{% endblock %}

{% block content_script %}
	<script type="text/javascript">
		$(document).ready(function () {
			$('.item .delete').click(openModal);
		});

		function openModal(e) {
			var $this = $(this);
			e.preventDefault();
			var removePageCategory = $('#removePageCategory');
			removePageCategory.find('.title').html($(this).data('title'));
			removePageCategory.find('.cancel').one('click', function () {
				removePageCategory.modal('hide');
			});
			var id = $this.data('id');
			removePageCategory.find('.delete').unbind('click').click(function () {
				$.post('{{ url('admin_page_category', {"action": "delete"})}}/' + id, function  (data) {
				    if (data && 'success' == data.status) {
						$('.flashmessage').addClass('hide');
						$('.page_category_removed_success').removeClass('hide');
						$('.item-' + id).remove();
						removePageCategory.modal('hide');
					} else {
					    errorRemove();
					}
				}, 'json').error(errorRemove);
			});
			removePageCategory.modal();
		}

		function errorRemove() {
		    $('.flashmessage').addClass('hide');
		    $('.page_category_removed_error').removeClass('hide');
		    $('#removePageCategory').modal('hide');
		}
	</script>
{% endblock %}

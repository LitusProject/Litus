{% extends 'site/base.twig' %}

{% block content %}
    {% if submenu is not empty %}
        <div class="subnav">
            <ul class="nav nav-pills">
                {% for item in submenu %}
                    {% if 'category' == item.type %}
                        <li class="dropdown">
                            <a class="dropdown-toggle highlighted" data-toggle="dropdown" href="#">
                                {{ item.name }} <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                {% for page in item.items %}
                                    {% if hasAccess('page', 'view') %}
                                        <li><a href="{{ url('page', {"name": page.name}) }}">{{ page.title }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>
                    {% else %}
                        {% if hasAccess('page', 'view') %}
                            <li><a href="{{ url('page', {"name": item.name}) }}">{{ item.title }}</a></li>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="page-header">
        <h1>{{ page.getTitle(language) }}</h1>
    </div>

    <div class="row page">
        <div class="span12">
            {% autoescape false %}
                {{ markdown(page.getContent(language)) }}
            {% endautoescape %}
        </div>
    </div>
{% endblock %}

{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_news/partials/navigation.twig' %}
	
	{% include 'admin/partials/flashMessenger.twig' %}
    <div class="flashmessage success_message full_width page_removed_success hide">
    	<div class="title">Success</div>
    	<div class="content">
    		<p>The page was successfully removed!</p>
    	</div>
    </div>
    <div class="flashmessage error_message full_width page_removed_error hide">
    	<div class="title">Error</div>
    	<div class="content">
    		<p>An error occurred while trying to delete the page.</p>
    	</div>
    </div>
	
	<div id="controller_action">
	    <table class="full_width manage">
	        <thead>
	            <tr>
	                <th>Title</th>
	                <th width="150px">Time</th>
	                <th width="160px">Author</th>
	                <th width="70px">Actions</th>
	            </tr>
	        </thead>
	
	        <tbody>
	            {% for page in paginator %}
	                <tr class="item">
	                    <td>{{ page.getTitle(language) }}</td>
	                    <td>{{ dateLocalized(page.getCreationTime(), 'dd/MM/y H:m') }}</td>
	                    <td>{{ page.getUpdatePerson().getFullName() }}</td>
	                    <td class="actions">
	                        {% if hasAccess('admin_page', 'edit') %}
	                            <a href="{{ url('admin_page', {"action": "edit", "id": page.getId()}) }}" class="edit">Edit</a>
	                        {% endif %}
	                        {% if hasAccess('admin_news', 'delete') %}
	                            <a href="#" data-id="{{ page.getId() }}" data-title="{{ page.getTitle(language) }}" class="delete">Delete</a>
	                        {% endif %}
	                    </td>
	                </tr>
	            {% endfor %}
	        </tbody>
	    </table>
	
		{% include 'admin/partials/paginationControl.twig' %}
	</div>
	
	<div class="modal hide fade" id="removePage">
		<div class="modal-header">
			<span>Litus Admin</span>
			/Delete Page
		</div>
		<div class="modal-body">
			<p>
				You are about to delete the following page: <b class="title"></b>?
				Please note that this operation cannot be undone!
			</p>
			<p>
				Are you sure you want to continue?
			</p>
			<div class="footer">
				<input type="button" class="delete" value="Yes">
				<input type="button" class="cancel" data-dismiss="modal" value="No">
			</div>
		</div>
	</div>
{% endblock %}

{% block content_script %}
	<script type="text/javascript">
		$(document).ready(function () {
			$('.item .delete').click(openModal);
		});
		
		function openModal(e) {
			var $this = $(this);
			e.preventDefault();
			var removePage = $('#removePage');
			removePage.find('.title').html($(this).data('title'));
			removePage.find('.cancel').one('click', function () {
				removePage.modal('hide');
			});
			var id = $this.data('id');
			removePage.find('.delete').unbind('click').click(function () {
				$.post('{{ url('admin_page', {"action": "delete"})}}/' + id, function  (data) {
				    if (data && 'success' == data.status) {
						$('.flashmessage').addClass('hide');
						$('.page_removed_success').removeClass('hide');
						$('.item-' + id).remove();
						removePage.modal('hide');
					} else {
					    errorRemove();
					}
				}, 'json').error(errorRemove);
			});
			removePage.modal();
		}
		
		function errorRemove() {
		    $('.flashmessage').addClass('hide');
		    $('.page_removed_error').removeClass('hide');
		    $('#removePage').modal('hide');
		}
	</script>
{% endblock %}

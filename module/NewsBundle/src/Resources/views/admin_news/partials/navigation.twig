<header id="controller_header">
    <div class="title"><span class="news">News</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('admin_news', 'manage') %}
                <li><a {% if 'manage' == getParam('action') or 'edit' == getParam('action') %} class="active" {% endif %} href="{{ url("admin_news", {"action": "manage"}) }}">Manage</a></li>
            {% endif %}
            {% if hasAccess('admin_news', 'add') %}
                <li><a {% if 'add' == getParam('action') %} class="active" {% endif %} href="{{ url("admin_news", {"action": "add"}) }}">Add</a></li>
            {% endif %}
        </ul>
    </nav>
</header>
<header id="controller_header">
    <div class="title"><span class="calendar">Calendar</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('calendar_admin_calendar_registration', 'manage') %}
                <li><a {% if 'calendar_admin_calendar_registration' == getParam('controller') %} class="active" {% endif %} href="{{ url('calendar_admin_calendar_registration', {"action": "manage"}) }}">Registration</a></li>
            {% endif %}
            {% if hasAccess('calendar_admin_calendar', 'add') %}
                <li><a {% if ('add' == getParam('action') or 'template' == getParam('action')) and 'calendar_admin_calendar' == getParam('controller') %} class="active" {% endif %} href="{{ url('calendar_admin_calendar', {"action": "add"}) }}">Add</a></li>
            {% endif %}
            {% if hasAccess('calendar_admin_calendar', 'old') %}
                <li>
                    <a {% if 'old' == getParam('action') and 'calendar_admin_calendar' == getParam('controller') %} class="active" {% endif %} href="{{ url('calendar_admin_calendar', {"action": "old"}) }}">
                        Old
                    </a>
                </li>
            {% endif %}
            {% if hasAccess('calendar_admin_calendar', 'manage') %}
                <li>
                    <a {% if 'manage' == getParam('action') and 'calendar_admin_calendar' == getParam('controller') %} class="active" {% endif %} href="{{ url('calendar_admin_calendar', {"action": "manage"}) }}">
                        Manage
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</header>

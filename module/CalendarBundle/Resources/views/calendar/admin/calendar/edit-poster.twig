{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'calendar/admin/calendar/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}
    <div class="flashmessage error_message full_width poster_upload_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while uploading the poster.</p>
        </div>
    </div>

    <div id="controller_action">
        <h1>Event</h1>

        <p>Title: <b>{{ event.getTitle(language) }}</b></p>
        <p>Start Date: <b>{{ event.getStartDate().format('d/m/Y H:i') }}</b></p>
        <p>End Date: <b>{{ event.getEndDate().format('d/m/Y H:i') }}</b></p>
        <p>Location: <b>{{ event.getLocation(language) }}</b></p>
        <br />
        <h1>Current Poster</h1>
        {% if event.getPoster() %}
            <img src="{{ url('calendar_admin_calendar', {'action': 'poster', 'id': event.getPoster()}) }}" alt="{{ event.getTitle(language) }}" style="width: 500px">
        {% else %}
            <i>This event currently has no poster.</i>
        {% endif %}
        <h1>Change Poster</h1>
        {% import 'admin/partials/form.twig' as forms %}
        {{ forms.renderForm(form) }}
    </div>

    <div class="modal fade" id="progressModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Upload Banner
                </div>
                <div class="modal-body">
                    <p>
                        Your files are being uploaded.
                    </p>
                    <p>
                        <div class="progress progress-striped active">
                            <div class="bar" style="width: 100%;"></div>
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#uploadPoster').formUploadProgress({
                onProgress: function (data) {
                    $('#progressModal').find('.bar').width(((data.current / data.total) * 100) + '%');
                },
                onSubmitted: function (data) {
                    if (data == undefined) {
                        $('.flashmessage').addClass('hide');
                        $('.poster_upload_error').removeClass('hide');
                    } else if (data.errors) {
                        $('.flashmessage').addClass('hide');
                        $('.poster_upload_error').removeClass('hide');
                        displayErrorsInElement(data.errors, $('#uploadPoster'));
                    } else if (data.info) {
                        window.location.reload();
                    }
                    var progressModal = $('#progressModal');
                    progressModal.permanentModal('hide');
                },
                onSubmit: function () {
                    $('.flashmessage').addClass('hide');
                    var progressModal = $('#progressModal');
                    progressModal.find('.bar').width('100%');
                    progressModal.permanentModal('open');
                },
                onError: function () {
                    $('.flashmessage').addClass('hide');
                    $('.poster_upload_error').removeClass('hide');
                    var progressModal = $('#progressModal');
                    progressModal.permanentModal('hide');
                }
            });
        });

        function displayErrorsInElement(errors, parent) {
            parent.closest('.row').find('div.errors').html('');
            $.each(errors, function (name, childErrors) {
                if (typeof childErrors == 'string') {
                    var list = parent.closest('.row').find('div.errors ul.errors');
                    if (list.length == 0) {
                        list = $('<ul>', {'class': 'errors'});
                        parent.closest('.row').find('div.errors').after(list);
                    }
                    list.append($('<li>').html(childErrors));
                } else {
                    var child;
                    if (parent.is('form')) {
                        child = parent.find('[name=' + name + ']');
                    } else {
                        child = parent.find('[name$="[' + name + ']"]');
                    }
                    displayErrorsInElement(childErrors, child);
                }
            });
        }
    </script>
{% endblock %}

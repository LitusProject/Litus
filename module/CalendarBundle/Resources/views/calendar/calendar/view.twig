{% extends 'site/base.twig' %}

{% block content %}
    <div class="page-header">
        {% if hasAccess('ticket', 'event') and ticketEvent is not null %}
            <div class="pull-right" style="line-height: 50px">
                <a href="{{ url('ticket', {'id': ticketEvent.getId()}) }}" class="btn"><span class="icon-tags"></span> {{ translate('Tickets') }}</a>
            </div>
        {% endif %}
        {% if hasAccess('shift', 'index') and hasShifts %}
            <div class="pull-right" style="line-height: 50px">
                <form action="{{ url('shift') }}" method="post">
                    <input type="hidden" name="event" value="{{ event.getId() }}">
                    <button type="submit" class="btn"><span class="icon-tasks"></span> {{ translate('Shifts') }}</button>
                </form>
            </div>
        {% endif %}
        <h2>{{ translate('Calendar') }}</h2>
    </div>

    <div class="item">
        <span class="date left">{{ dateLocalized(event.getStartDate(), 'd MMM') }}</span>

        <p><i class="icon-time"></i> {{ dateLocalized(event.getStartDate(), 'HH:mm') }}{% if event.getEndDate() %} - {{ dateLocalized(event.getEndDate(), 'HH:mm') }}{% endif %}&mdash;{{ event.getTitle(language) }}</p>
        <p><i class="icon-home"></i> {{ translate('Location') }}: {{ event.getLocation(language) }}</p>
        {% if event.getPoster() %}
            <div class="row">
                <div class="span3">
                    <img src="{{ url('calendar', {'action':'poster', 'name': event.getPoster()}) }}" alt="{{ event.getTitle(language) }}"/>
                </div>
                <div class="span9">
                    <blockquote>
                        {% autoescape false %}
                            {{ hideEmail(markdown(event.getContent(language))) }}
                        {% endautoescape %}
                    </blockquote>
                </div>
            </div>
        {% else %}
            <blockquote>
                {{ hideEmail(markdown(event.getContent(language))) }}
            </blockquote>
        {% endif %}
    </div>
{% endblock %}

{% extends 'career/partials/layout.twig' %}

{% block page_content %}

    <div class="container">
        <div class="row">
            <a class="button blue pull-right" style="margin-left: 20px;margin-top: 10px;" href="{{ url('br_career_match') }}">HOME</a>
            {% if type == 'company' %}
                <h1 style="float:left;">{{ translate('Company Profile') }}</h1>
                <a class="button blue unfilled pull-right" style="margin-left: 20px;margin-top: 10px;" href="{{ url('br_career_match', {'action': 'editProfile', 'type': 'student' }) }}">Edit Student Profile</a>
            {% elseif type == 'student' %}
                <h1 style="float:left;">{{ translate('Student Profile') }}</h1>
                <a class="button blue unfilled pull-right" style="margin-left: 20px;margin-top: 10px;" href="{{ url('br_career_match', {'action': 'editProfile', 'type': 'company' }) }}">Edit Company Profile</a>
            {% endif %}
        </div>
        <div class="row">
            {% if type == 'student' %}
                <div style="margin-top: 15px;"><u><strong>{{ translate('This profile should describe what you are like as a STUDENT.') }}</strong></u>
                    <p>{{ translate('A company will have a higher match rating, if your personal traits matches the traits that they are looking for!') }}</p></div>
            {% elseif type == 'company' %}
                <div style="margin-top: 15px;"><u><strong>{{ translate('This profile should describe what you are looking for in a COMPANY.') }}</strong></u>
                    <p>{{ translate('A company will have a higher match rating, if the company matches the traits that you are looking for!') }}</p></div>
            {% endif %}
            <div style="height: 20px;"></div>
            <p>{{ gdpr_text }}</p>
        </div>

        <div style="height: 40px"></div>
        You can distribute maximum {{ sector_points }} points for the sector features!
        <div style="height: 40px"></div>

        {% import 'site/partials/form.twig' as forms %}
        {{ forms.renderForm(form) }}
    </div>

{% endblock %}

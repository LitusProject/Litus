{% extends 'career/partials/layout.twig' %}

{% block page_content %}

    <div class="row">
        <h1 style="float:left;">
            {% if type == 'company' %}
                {{ translate('View Company Profile') }}
            {% elseif type == 'student' %}
                {{ translate('View Student Profile') }}
            {% endif %}
        </h1>
        <a class="btn btn-warning btn-sm pull-right" href="{{ url('br_career_match', {'action': 'editProfile', 'type': type }) }}">Edit Profile</a>
    </div>
    <div class="row">
        {% if type == 'student' %}
            <div style="margin-top: 15px;"><strong>{{ translate('This profile should describe what you are like as a student.') }}</strong>
                <p>{{ translate('A company will have a higher match rating, if your personal traits matches the traits that they are looking for!') }}</p></div>
        {% elseif type == 'company' %}
            <div style="margin-top: 15px;"><strong>{{ translate('This profile should describe what you are looking for in a company.') }}</strong>
                <p>{{ translate('A company will have a higher match rating, if the company matches the traits that you are looking for!') }}</p></div>
        {% endif %}
    </div>

    <div style="height: 40px"></div>

    <div class="vtk-flex-stretch">
        <div class="col-md-6" style="margin:auto;">
            <h4>Features</h4>
            <table class="table table-striped full-width">
                {% for feature in features %}
                    <tr>
                        <td>
                            <strong>{{ feature.getFeature().getName() }}</strong>
                        </td>
                    </tr>
                {% endfor %}
            </table>

            {% include 'site/partials/paginationControl.twig' %}
        </div>
    </div>

{% endblock %}

    <div style="height: 40px"></div>

    <div class="br-infoHolder">
        <div class="br-markdown" style="margin-right: 40px">
            {{ markdown(page.getDescription()) }}
            <div style="height: 10px"></div>
            <a class="button blue unfilled" href="{{ page.getCompany().getFullWebsite() }}" target="_blank">Website bekijken</a>
        </div>
        <div style="min-width: 60%" class="temporaryImage">
            <iframe width="680px" height="340px" src="https://www.youtube.com/embed/A6tn0AnNEj8"></iframe>
        </div>
    </div>

    <div style="height: 80px"></div>

    <div style="height: 30px"></div>
    <div style="position:relative">
        <h3 style="position: relative; z-index: 1">Evenementen</h3> 
        <div class="br-titledecoration"></div>
    </div>
    <div style="height: 20px"></div>
    <div class="br-companyEventHolder">
        <div class="br-eventTitleHolder">
            <h5 style="margin-bottom: 0px; max-width: 100%">Karting voor young potentials</h5>
        </div>
    </div>
    <div style="height: 30px"></div>

    {% if events|length > 0 %}
        {% for corporateEvent in events %}
            {% set event = corporateEvent.getEvent() %}
            {{ event.getTitle(language) }}<br>
            {{ event.getSummary(50, language) }}<br>
            {{ event.getContent(language) }}
        {% endfor %}
    {% endif %}

    {% if vacancies|length > 0 %}
        <div style="height: 30px"></div>
        <div style="position:relative">
            <h3 style="position: relative; z-index: 1">{{ translate('Vacancies') }}</h3> 
            <div class="br-titledecoration"></div>
        </div>
        <div style="height: 20px"></div>
        {% for vacancy in vacancies %}
            <a class="vacancyHolder br-arrowAnimation" href="{{ url('br_career_vacancy', {'action': 'view', 'id': vacancy.getId() }) }}"> 
                {{ vacancy.getName() }}
            </a>  
        {% endfor %}
        <div style="height: 30px"></div>    
    {% endif %}

    {% if internships|length > 0 %}
        <div style="height: 30px"></div>
        <div style="position:relative">
            <h3 style="position: relative; z-index: 1">{{ translate('Internships') }}</h3> 
            <div class="br-titledecoration"></div>
        </div>
        <div style="height: 20px"></div>
        {% for internship in internships %}
            <a class="vacancyHolder br-arrowAnimation" href="{{ url('br_career_internship', {'action': 'view', 'id': internship.getId() }) }}"> 
                {{ internship.getName() }}
            </a>  
        {% endfor %}

        <div style="height: 30px"></div>    
    {% endif %}

    {% if studentJobs|length > 0 %}
        <div style="height: 30px"></div>
        <div style="position:relative">
            <h3 style="position: relative; z-index: 1">{{ translate('StudentJobs') }}</h3> 
            <div class="br-titledecoration"></div>
        </div>
        <div style="height: 20px"></div>
        {% for studentJob in studentJobs %}
            <a class="vacancyHolder br-arrowAnimation" href="{{ url('br_career_student_job', {'action': 'view', 'id': studentJob.getId() }) }}"> 
                {{ studentJob.getName() }}
            </a>  
        {% endfor %}
        <div style="height: 30px"></div>    
    {% endif %}



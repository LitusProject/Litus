{% extends 'corporate/partials/cv.twig' %}

{% block cv_content %}
    <div class="panel-group" id="accordion">
        {% for study in studies %}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a class="pannel-title" data-toggle="collapse" href="#body-study-{{ study.id }}">
                        {{ study.name }}
                    </a>
                </div>
                <div id="body-study-{{ study.id }}" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="panel-group" id="accordion-study-{{ study.id }}">
                            {% for entry in study.entries %}
                                <div class="panel panel-default" id="accordion-group-{{ entry.getId() }}">
                                    <div class="panel-heading">
                                        <a class="pannel-title entry-toggle" data-toggle="collapse" href="#body-entry-{{ entry.getId() }}">
                                            {{ entry.getFirstName() }} {{ entry.getLastName() }}
                                        </a>
                                    </div>
                                    <div id="body-entry-{{ entry.getId() }}" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            {% import 'corporate/partials/showcv.twig' as cv %}
                                            {{ cv.displayEntry(entry, profilePath) }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
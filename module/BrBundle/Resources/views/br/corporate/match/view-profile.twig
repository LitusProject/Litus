{% extends 'corporate/base.twig' %}

{% block content %}
    <div class="container">
        <div style="height: 40px"></div>

        <div class="row">
            <h1 style="float:left;">
                {% if type == 'company' %}
                    {{ translate('View Company Profile') }}
                {% elseif type == 'student' %}
                    {{ translate('View Student Profile') }}
                {% endif %}
            </h1>
            <a class="btn btn-warning btn-sm pull-right" href="{{ url('br_corporate_match', {'action': 'editProfile', 'type': type }) }}">Edit Profile</a>
        </div>
        <div class="row">
            {% if type == 'company' %}
                <div style="margin-top: 15px;"><u><strong>{{ translate('This profile should describe what your company is like.') }}</strong></u>
                    <p>{{ translate('A student will have a higher match rating, if your company matches the traits that they are looking for!') }}</p>
                </div>
            {% elseif type == 'student' %}
                <div style="margin-top: 15px;"><u><strong>{{ translate('This profile should describe what you are looking for in a student.') }}</strong></u>
                    <p>{{ translate('A student will have a higher match rating, if the student matches the traits that you are looking for!') }}</p>
                </div>
            {% endif %}
        </div>

        <div style="height: 40px"></div>

        <div class="vtk-flex-stretch">
            <div class="col-md-6" style="margin:auto;">
                <h4>Features</h4>
                <table class="table table-striped full-width">
                    {% for feature in features %}
                        <tr>
                            <td>
                                <strong>{{ feature.getFeature().getName() }}</strong>
                            </td>
                        </tr>
                    {% endfor %}
                </table>

                {% include 'site/partials/paginationControl.twig' %}
            </div>
        </div>
    </div>

{% endblock %}

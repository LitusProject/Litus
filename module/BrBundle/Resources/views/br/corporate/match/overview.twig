{% extends 'corporate/base.twig' %}

{% block content %}
    <div>
        <h1 style="float:left;">{{ translate('Your Matching Profile') }}</h1>
        <div style="margin-top: 37px;"><strong>{{ translate('Find your match with our students!') }}</strong></div>
        <div>{{ translate('Last Updated') }}: <strong>{{ dateLocalized(lastUpdate, 'd  MMMM y') }}</strong></div>

        {% if needs_sp or needs_cp %}
            <h3>{{ translate('You are not ready to match yet!') }}</h3>
            <h4>{{ translate('Please create your Profile so you can start matching!') }}</h4>
        {% endif %}
        {% if needs_sp %}
            <a class="btn btn-sm btn-info" href="{{ url('br_corporate_match', {'action': 'addProfile', 'type': 'student' }) }}">{{ translate('Add Student Profile') }}</a>
        {% endif %}
        {% if needs_cp %}
            <a class="btn btn-sm btn-info" href="{{ url('br_corporate_match', {'action': 'addProfile', 'type': 'company' }) }}">{{ translate('Add Company Profile') }}</a>
        {% endif %}
    </div>



    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover full-width">
                {% for match in matches %}
                        <tr>
                            <td>
                                <strong>{{ match.getStudent() }}</strong>
                                <br/>
                                {{ match.getMatchPercentage() }}
                            </td>
                            <td width="230" style="vertical-align: middle;">
                                <a class="btn btn-sm btn-info" href="{{ url('br_corporate_match', {'action': 'viewMatch', 'id': match.getId() }) }}">{{ translate('View Match') }}</a>

                            </td>

                        </tr>
                {% else %}
                    <div class="flashmessage alert alert-warning fade in">
                        <a class="close" data-dismiss="alert">&times;</a>
                        {{ translate('No matches found') }}
                    </div>
                {% endfor %}
            </table>

            {% include 'site/partials/paginationControl.twig' %}
        </div>
    </div>
{% endblock %}

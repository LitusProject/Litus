{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'br/admin/match/feature/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div class="flashmessage success_message full_width feature_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The feature was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width feature_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete a feature.</p>
        </div>
    </div>

    <div id="controller_action">
        <table class="full_width manage">
            <tr>
                <th>Name</th>
                <th width="70px">Action</th>
            </tr>

            {% for feature in paginator %}

                <tr class="item item-{{ feature.getId() }}">
                    <td>{{ feature.getName() }}</td>
                    <td class="actions">
                        {% if hasAccess('br_admin_match_feature', 'edit') %}
                            <a href="{{ url('br_admin_match_feature', {"action": "edit", "id": feature.getId()}) }}" class="edit">Edit</a>
                        {% endif %}
                        {% if hasAccess('br_admin_match_feature', 'delete') %}
                            <a href="#" class="delete" data-id="{{ feature.getId() }}">Delete</a>
                        {% endif %}
                    </td>
                </tr>

            {% endfor %}

        </table>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>

    <div class="modal fade" id="removeFeature" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Delete Feature
                </div>
                <div class="modal-body">
                    <p>
                        You are about to delete the following feature: <b class="featureTitle"></b>!
                        Please note that this operation cannot be undone!
                    </p>
                    <p>
                        Are you sure you want to continue?
                    </p>
                    <div class="footer">
                        <button class="delete">Yes</button>
                        <button class="cancel" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">

        $(document).ready(function () {
            $('.item .delete').click(openModal);
        });

        function openModal(e) {
            var $this = $(this);

            e.preventDefault();
            var removeFeature = $('#removeFeature');
            removeFeature.find('.featureTitle').html($(this).data('title'));
            var id = $this.data('id');
            removeFeature.find('.delete').unbind('click').click(function () {
                $.post('{{ url('br_admin_match_feature', {"action": "delete"})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.feature_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeFeature.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeFeature.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.feature_removed_error').removeClass('hide');
            $('#removeFeature').modal('hide');
        }

    </script>
{% endblock %}

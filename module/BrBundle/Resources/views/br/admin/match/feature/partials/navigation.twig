<header id="controller_header">
    <div class="title"><span class="event">Matching Features</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('br_admin_match_feature', 'add') %}
                <li><a {% if 'add' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_match_feature', {"action": "add"}) }}">Add</a></li>
            {% endif %}
            {% if hasAccess('br_admin_match_feature', 'manage') %}
                <li><a {% if 'manage' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_match_feature', {"action": "manage"}) }}">Manage</a></li>
            {% endif %}
        </ul>
    </nav>
</header>

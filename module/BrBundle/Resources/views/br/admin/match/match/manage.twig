{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'br/admin/match/partials/navigation.twig' %}
    {% include 'br/admin/match/match/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div class="flashmessage success_message full_width match_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The match was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage success_message full_width student_mail_sent hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The mails were successfully sent to the students!</p>
        </div>
    </div>
    <div class="flashmessage success_message full_width company_mail_sent hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The mails were successfully sent to the companies (or to BR)!</p>
        </div>
    </div>

    <div class="flashmessage error_message full_width match_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete a match.</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width student_mail_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to send a mail to the students.</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width company_mail_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to send a mail to the companies.</p>
        </div>
    </div>

    <aside>
        {% if hasAccess('br_admin_match_match', 'deleteAll') %}
            <div class="sidebox">
                <div class="title">Delete All</div>
                <div class="content">
                    <p>
                        <i>Please hit the link below to delete all matches!</i>
                    </p>
                    <p>
                        <a href="{{ url('br_admin_match_match', {"action": "deleteAll"}) }}">&rarr; Delete All</a>
                    </p>
                </div>
            </div>
        {% endif %}
    </aside>

    <div id="controller_action">
        <table class="full_width manage">
            <tr>
                <th>Student</th>
                <th>Company</th>
                <th width="180px">Match Rating</th>
                <th width="180px">Action</th>
            </tr>

            {% for match in paginator %}

                <tr class="item item-{{ match.getId() }}">
                    <td>{{ match.getStudentMatchee().getStudent().getFullName() }}</td>
                    <td>{{ match.getCompanyMatchee().getCompany().getName() }}</td>
                    <td>{{ match.getMatchPercentage() }} %</td>
                    <td class="actions">
                        {% if hasAccess('br_admin_match_match', 'edit') %}
                            <a href="{{ url('br_admin_match_match', {"action": "view", "id": match.getId()}) }}" class="view">View</a>
                        {% endif %}
                        {% if hasAccess('br_admin_match_match', 'delete') %}
                            <a href="#" class="delete" data-id="{{ match.getId() }}">Delete</a>
                        {% endif %}
                    </td>
                </tr>

            {% endfor %}

        </table>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>

    <div class="modal fade" id="removeMatch" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Delete Match
                </div>
                <div class="modal-body">
                    <p>
                        You are about to delete the following match: <b class="matchTitle"></b>!
                        Please note that this operation cannot be undone!
                    </p>
                    <p>
                        Are you sure you want to continue?
                    </p>
                    <div class="footer">
                        <button class="delete">Yes</button>
                        <button class="cancel" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="student_mail_modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Send Mail to Students
                </div>
                <div class="modal-body">
                    <p>
                        You are about to Send a mail to all students that have a match!
                        Be sure to check out (or ask IT) what the current mail body is!!
                        Please note that this operation cannot be undone!
                    </p>
                    <p>
                        Are you sure you want to continue?
                    </p>
                    <div class="footer">
                        <button class="send">Yes</button>
                        <button class="cancel" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="company_mail_modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Send Mail to Companies
                </div>
                <div class="modal-body">
                    <p>
                        You are about to Send a mail to all companies that have a match!
                        Be sure to check out (or ask IT) what the current mail body is!!
                        Please note that this operation cannot be undone!
                        If any company does not have a default mail address listed (on the admin), this mail will not be sent.
                        Instead, a list of all those companies will be sent to the sender.
                    </p>
                    <p>
                        Are you sure you want to continue?
                    </p>
                    <div class="footer">
                        <button class="send">Yes</button>
                        <button class="cancel" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">

        $(document).ready(function () {
            $('.item .delete').click(openModal);
            $('#sendMailStudents').click(openModalStudents);
            $('#sendMailCompanies').click(openModalCompanies);
        });

        function openModal(e) {
            var $this = $(this);
            e.preventDefault();
            var removeMatch = $('#removeMatch');
            removeMatch.find('.matchTitle').html($(this).data('title'));
            var id = $this.data('id');
            removeMatch.find('.delete').unbind('click').click(function () {
                $.post('{{ url('br_admin_match_match', {"action": "delete"})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.match_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeMatch.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeMatch.modal();
        }

        function openModalStudents(e) {
            e.preventDefault();
            var studentModal = $('#student_mail_modal');
            studentModal.find('.send').unbind('click').click(function () {
                $.post('{{ url('br_admin_match_match', {"action": "sendMailStudents"}) }}', function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.student_mail_sent').removeClass('hide');
                        studentModal.modal('hide');
                    } else {
                        errorSendStudents();
                    }
                }, 'json').error(errorSendStudents);
            });
            studentModal.modal();
        }
        function openModalCompanies(e) {
            e.preventDefault();
            var companyModal = $('#company_mail_modal');
            companyModal.find('.send').unbind('click').click(function () {
                $.post('{{ url('br_admin_match_match', {"action": "sendMailCompanies"}) }}', function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.company_mail_sent').removeClass('hide');
                        companyModal.modal('hide');
                    } else {
                        errorSendCompanies();
                    }
                }, 'json').error(errorSendCompanies);
            });
            companyModal.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.match_removed_error').removeClass('hide');
            $('#removeMatch').modal('hide');
        }
        function errorSendStudents() {
            $('.flashmessage').addClass('hide');
            $('.student_mail_error').removeClass('hide');
            $('#student_mail_modal').modal('hide');
        }
        function errorSendCompanies() {
            $('.flashmessage').addClass('hide');
            $('.company_mail_error').removeClass('hide');
            $('#company_mail_modal').modal('hide');
        }

    </script>
{% endblock %}

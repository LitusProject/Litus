{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'br/admin/event/partials/eventNavigation.twig' %}
    {% include 'br/admin/event/partials/companyNavigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div class="flashmessage success_message full_width attendee_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The attendee was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width attendee_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete the company.</p>
        </div>
    </div>

    <div id="controller_action">
        {% if hasAccess('br_admin_event_company', 'addAttendee') %}
            {% import 'admin/partials/form.twig' as forms %}
            {{ forms.renderForm(companyMapForm) }}
        {% endif %}

        <h1>Participants</h1>
        <table class="manage">
            <tr>
                <th>Name</th>
                <th width="90px">Actions</th>
            </tr>
            {% for attendee in eventCompanyMap.getAttendees() %}
                <tr class="item item-{{ attendee.getId() }}">
                    <td>{{ attendee.getFirstName() }} {{ attendee.getLastName() }}</td>
                    <td>
                        {% if hasAccess('br_admin_event_company', 'deleteAttendee') %}
                            <a href="#" data-id="{{ attendee.getId() }}" data-name="{{ attendee.getFirstName() }} {{ attendee.getLastName() }}" class="delete">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="modal fade" id="removeAttendee" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Delete Attendee
                </div>
                <div class="modal-body">
                    <p>
                        You are about to delete the following attendee: <b class="attendeeName"></b>!
                        Please note that this operation cannot be undone!
                    </p>
                    <p>
                        Are you sure you want to continue?
                    </p>
                    <div class="footer">
                        <button class="delete">Yes</button>
                        <button class="cancel" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.item .delete').click(openModal);
        });


        function openModal(e) {
            var $this = $(this);

            e.preventDefault();
            var removeAttendee = $('#removeAttendee');
            removeAttendee.find('.attendeeName').html($(this).data('name'));
            var id = $this.data('id');
            removeAttendee.find('.delete').unbind('click').click(function () {
                $.post('{{ url('br_admin_event_company', {"action": "deleteAttendee", 'event': event.getId()})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.attendee_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeAttendee.modal('hide');
                        $(':input','#addattendee')
                            .not(':button, :submit, :reset, :hidden')
                            .val('')
                            .prop('checked', false)
                            .prop('selected', false);
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeAttendee.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.attendee_removed_error').removeClass('hide');
            $('#removeAttendee').modal('hide');
        }
    </script>
{% endblock %}
<header id="controller_header">
    <div class="title"><span class="invoice">Invoices</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('br_admin_invoice', 'downloadAll') %}
                <li><a href="{{ url('br_admin_invoice', {'action': 'downloadAll'}) }}">Download All</a></li>
            {% endif %}
            {% if hasAccess('br_admin_invoice', 'csv') %}
                <li><a {% if 'csv' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_invoice', {"action": "csv"}) }}">CSV</a></li>
            {% endif %}
            {% if hasAccess('br_admin_invoice', 'manualAdd') %}
                <li><a {% if 'manualAdd' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_invoice', {"action": "manualAdd"}) }}">Add Manual Invoice</a></li>
            {% endif %}
            {% if hasAccess('br_admin_invoice', 'payedList') %}
                <li><a {% if 'payedList' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_invoice', {"action": "payedList"}) }}">Payed</a></li>
            {% endif %}
            {% if hasAccess('br_admin_invoice', 'manage') %}
                <li><a {% if 'manage' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_invoice', {"action": "manage"}) }}">Manage</a></li>
            {% endif %}
        </ul>
    </nav>
</header>

{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'br/admin/section/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div class="flashmessage success_message full_width section_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The section was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width section_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete a section.</p>
        </div>
    </div>

    <div id="controller_action">

        <table class="full_width manage">
            <tr>
                <th>Name</th>
                <th width="150px">Author</th>
                <th width="75px">Year</th>
                <th width="70px">Actions</th>
            </tr>

            {% for section in paginator %}
                <tr class="item item-{{ section.getId() }}">
                    <td>{{ section.getName() }}</td>
                    <td>{{ section.getAuthor().getFullName() }}</td>
                    <td>{{ section.getYear() }}</td>
                    <td class="actions">
                        {% if hasAccess('br_admin_section', 'edit') %}
                            <a href="{{ url('br_admin_section', {"action": "edit", "id": section.getId()}) }}" class="edit">Edit</a>
                        {% endif %}
                        {% if hasAccess('br_admin_section', 'delete') %}
                            <a href="#" class="delete" data-id="{{ section.getId() }}" data-name="{{ section.getName() }}">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>

    <div class="modal hide fade" id="removeSection">
        <div class="modal-header">
            <span>Litus Admin</span>
            /Delete Section
        </div>
        <div class="modal-body">
            <p>
                You are about to delete the following section: <b class="sectionName"></b>!
                Please note that this operation cannot be undone!
            </p>
            <p>
                Are you sure you want to continue?
            </p>
            <div class="footer">
                <button class="delete">Yes</button>
                <button class="cancel" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.item .delete').click(openModal);
        });

        function openModal(e) {
            var $this = $(this);

            e.preventDefault();
            var removeSection = $('#removeSection');
            removeSection.find('.sectionName').html($(this).data('name'));
            var id = $this.data('id');
            removeSection.find('.delete').unbind('click').click(function () {
                $.post('{{ url('br_admin_section', {"action": "delete"})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.section_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeSection.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeSection.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.section_removed_error').removeClass('hide');
            $('#removeSection').modal('hide');
        }

    </script>
{% endblock %}
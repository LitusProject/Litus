{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'br/admin/company/event/partials/navigation.twig' %}

    <div id="controller_action">
        {% include 'admin/partials/flashMessenger.twig' %}
        <div class="flashmessage success_message full_width event_removed_success hide">
            <div class="title">Success</div>
            <div class="content">
                <p>The event was successfully removed!</p>
            </div>
        </div>
        <div class="flashmessage error_message full_width event_removed_error hide">
            <div class="title">Error</div>
            <div class="content">
                <p>An error occurred while trying to delete an event.</p>
            </div>
        </div>

        <h1>Company</h1>
        <p>Name: <b>{{ company.getName() }}</b></p>
        <br />
        <table class="full_width manage">
            <thead>
                <tr>
                    <th>Name</th>
                    <th width="175px">Location</th>
                    <th width="100px">Start Date</th>
                    <th width="100px">End Date</th>
                    <th width="120px">Action</th>
                </tr>
            </thead>

            <tbody>
                {% for event in paginator %}
                    <tr class="item item-{{ event.getId() }}">
                        <td>{{ event.getEvent().getTitle(language) }}</td>
                        <td>{{ event.getEvent().getLocation(language) }}</td>
                        <td>{{ event.getEvent().getStartDate().format('d/m/Y H:i') }}</td>
                        <td>{{ event.getEvent().getEndDate().format('d/m/Y H:i') }}</td>
                        <td class="actions">
                            <ul>
                                {% if hasAccess('br_admin_company_event', 'editPoster') %}
                                    <li><a href="{{ url('br_admin_company_event', {"action": "editPoster", "id": event.getId()}) }}" class="calendar_edit">Poster</a></li>
                                {% endif %}
                                {% if hasAccess('br_admin_company_event', 'delete') %}
                                    <li><a href="#" class="delete" data-id="{{ event.getId() }}" data-name="{{ event.getEvent().getTitle(language) }}">Delete</a></li>
                                {% endif %}
                                {% if hasAccess('br_admin_company_event', 'edit') %}
                                    <li><a href="{{ url('br_admin_company_event', {"action": "edit", "id": event.getId()}) }}" class="calendar_edit">Edit</a></li>
                                {% endif %}
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>

    <div class="modal hide fade" id="removeEvent">
        <div class="modal-header">
            <span>Litus Admin</span>
            /Delete Event
        </div>
        <div class="modal-body">
            <p>
                You are about to delete the following event: <b class="eventName"></b>!
                Please note that this operation cannot be undone!
            </p>
            <p>
                Are you sure you want to continue?
            </p>
            <div class="footer">
                <button class="delete">Yes</button>
                <button class="cancel" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.item .delete').click(openModal);
        });

        function openModal(e) {
            var $this = $(this);

            e.preventDefault();
            var removeEvent = $('#removeEvent');
            removeEvent.find('.eventName').html($(this).data('name'));
            var id = $this.data('id');
            removeEvent.find('.delete').unbind('click').click(function () {
                $.post('{{ url('br_admin_company_event', {"action": "delete"}) }}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.event_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeEvent.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeEvent.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.event_removed_error').removeClass('hide');
            $('#removeEvent').modal('hide');
        }
    </script>
{% endblock %}

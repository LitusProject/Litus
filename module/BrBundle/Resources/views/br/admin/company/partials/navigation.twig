<header id="controller_header">
    <div class="title"><span class="company">Companies</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('br_admin_company', 'pdf') %}
                <li><a {% if 'pdf' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_company', {"action": "pdf"}) }}">PDF</a></li>
            {% endif %}
            {% if hasAccess('br_admin_company', 'csv') %}
                <li><a {% if 'csv' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_company', {"action": "csv"}) }}">CSV</a></li>
            {% endif %}
            {% if hasAccess('br_admin_company', 'add') %}
                <li><a {% if 'add' == getParam('action') %} class="active" {% endif %} href="{{ url('br_admin_company', {"action": "add"}) }}">Add</a></li>
            {% endif %}
            {% if hasAccess('br_admin_company', 'manage') %}
                <li>
                    <a
                        {% if 'manage' == getParam('action') or 'edit' == getParam('action') %} class="active" {% endif %}
                        href="{{ url('br_admin_company', {"action": "manage"}) }}"
                    >
                        Manage
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</header>

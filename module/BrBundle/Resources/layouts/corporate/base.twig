{{ doctype() }}

<html lang="en">
    <head>
        {{ headMeta() }}
        {{ headTitle('Corporate', 'PREPEND') }}
        {% do headLink({'rel': 'shortcut icon', 'href': '/img/favicon.ico'}) %}

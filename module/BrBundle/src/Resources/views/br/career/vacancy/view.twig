{% extends 'career/partials/layout.twig' %}

{% block page_content %}

    <div class="span2">
        {% if not vacancy.getCompany().getLogo() %}
            <div class="logo-replacement">
            </div>
        {% endif %}

        {% if vacancy.getCompany().getPage() %}
        <a href="{{ url('career_company',{ 'action': 'view', 'company': vacancy.getCompany().getSlug() }) }}">
        {% endif %}
            {% if vacancy.getCompany().getLogo() %}

                    <img src="{{ url('admin_company', {'action': 'logo', 'id': vacancy.getCompany().getLogo()}) }}" alt="{{ vacancy.getCompany().getName() }}">
            {% else %}

                <h2><center class="company-name">{{ vacancy.getCompany().getName() }}</center></h2>
            {% endif %}
        {% if vacancy.getCompany().getPage() %}
        </a>
        {% endif %}

        {% if vacancy.getCompany().getLogo() %}
            <center class="company-name">{{ vacancy.getCompany().getName() }}</center>
        {% endif %}

        {% if vacancy.getSector() %}

            <hr/>

            <center>
                <strong>
                    {{ translate('Sector') }}: {{ vacancy.getSector() }}<br/>
                </strong>
            </center>

        {% endif %}

        {% if vacancy.getCity() %}

            <hr/>

            <center>
                <strong>
                    {{ translate('Location') }}: {{ vacancy.getCity() }}<br/>
                </strong>
            </center>

        {% endif %}

    </div>
    <div class="span10">
        <h1>{{ vacancy.getName() }}</h1>
        <div class="pull-right" style="margin-top:-35px;">{{ translate('Last updated') }}: <strong>{{ dateLocalized(vacancy.getLastUpdateDate(), 'd  MMMM YYYY HH:mm') }}</strong></div>
        <div class="accordion" id="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#about">
                        {{ translate('Description') }}
                    </a>
                </div>
                <div id="about" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        {{ vacancy.getDescription() }}
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#profile">
                        {{ translate('Wanted Profile') }}
                    </a>
                </div>
                <div id="profile" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {{ vacancy.getProfile() }}
                    </div>
                </div>
            </div>
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#knowledge">
                        {{ translate('Required Knowledge') }}
                    </a>
                </div>
                <div id="knowledge" class="accordion-body collapse">
                    <div class="accordion-inner">
                        {{ vacancy.getRequiredKnowledge() }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
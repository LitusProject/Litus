{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_company/partials/navigation.twig' %}
	
	<div id="controller_action">
		{% include 'admin/partials/flashMessenger.twig' %}
	
	    <table class="full_width">
	        <thead>
	            <tr>
	                <th>Name</th>
	                <th width="175px">VAT Number</th>
	                <th width="120px">Action</th>
	            </tr>
	        </thead>
	
	        <tbody>
	            {% for company in paginator %}
	                <tr>
	                    <td>{{ company.getName() }}</td>
	                    <td>{{ company.getVatNumber() }}</td>
	                    <td>
	                        <ul>
	                        	{% if hasAccess('admin_supplier', 'edit') %}
	                            	<li><a href="{{ url('admin_company', {"action": "edit", "id": company.getId()}) }}" class="edit">Edit</a></li>
	                            {% endif %}
	                            {% if hasAccess('admin_company_user', 'manage') %}
	                                <a href="{{ url('admin_company_user', {"action": "manage", "id": company.getId()}) }}" class="view">Users</a>
	                            {% endif %}
	                        </ul>
	                    </td>
	                </tr>
	            {% endfor %}
	        </tbody>
	    </table>
	
		{% include 'admin/partials/paginationControl.twig' %}
	</div>
{% endblock %}
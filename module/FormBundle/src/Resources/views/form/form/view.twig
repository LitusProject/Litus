{% extends 'site/base.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ specification.getTitle(language) }}</h1>
    </div>

    <div class="row page">
        <div class="span12">

            {% autoescape false %}
                {{ markdown(specification.getIntroduction(language)) }}
            {% endautoescape %}

            <hr/>

            {% if not form %}
                {{ translate(message) }}
			{% else %}

                {% if form %}
                    {% import 'site/partials/form.twig' as forms %}
                    {{ forms.renderForm(form) }}
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'form/admin/form/partials/navigation.twig' %}

	{% include 'admin/partials/flashMessenger.twig' %}

	<div id="controller_action">
	    <h1>Form</h1>

	    <p>Name: <b>{{ formSpecification.getTitle(language) }}</b></p>
	    <br />

        {% import 'admin/partials/form.twig' as forms %}
        {{ forms.renderForm(form) }}
	</div>
{% endblock %}

{% block content_script %}
	<script type="text/javascript">

        $(document).ready(function () {
            $('#languages a:first').click();
            $('#type').change(toggleType);
        });

        function toggleType() {
        	toggleOptions();
        }

        function toggleOptions() {
        	if ('string' == $('#type').val() || 'checkbox' == $('#type').val())
        		$('.option_form').addClass('hide');
        	else
        		$('.option_form').removeClass('hide');
        }

    </script>
{% endblock %}
{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'syllabus/admin/study/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    {% include 'syllabus/admin/study/partials/years.twig' %}

    <div class="flashmessage success_message full_width study_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The study was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width study_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete the study.</p>
        </div>
    </div>

    <div id="controller_action">
        <div id="study_search" style="display:none;">
            <div style="padding:4px;text-align:right">
                Search:
                <select id="searchField">
                    <option value="name">Name</option>
                </select>
                is
                <input type="text" id="searchString" size="30" />
            </div>

            <table class="full_width manage">
                <tr>
                    <th>Name</th>
                    <th width="50px">Phase</th>
                    <th width="70px">Actions</th>
                </tr>
            </table>
        </div>

        <div id="default_page">
            <table class="full_width manage">
                <tr>
                    <th>Name</th>
                    <th width="50px">Phase</th>
                    <th width="70px">Actions</th>
                </tr>

                {% for mapping in paginator %}
                    <tr class="item item-{{ mapping.getId() }}">
                        <td>{{ mapping.getStudy().getFullTitle() }}</td>
                        <td>{{ mapping.getStudy().getPhase() }}</td>
                        <td class="actions">
                            {% if hasAccess('syllabus_admin_study', 'delete') %}
                                <a href="#" data-title="{{ mapping.getStudy().getTitle() }}" data-id="{{ mapping.getId() }}" data-url="{{ url('syllabus_admin_study', {'action': 'delete', 'id': mapping.getId()}) }}" class="delete">Delete</a>
                            {% endif %}
                            {% if hasAccess('syllabus_admin_study', 'edit') %}
                                <a href="{{ url('syllabus_admin_study', {'action': 'edit', 'id': mapping.getStudy().getId(), 'academicyear': currentAcademicYear.getCode()}) }}" class="view">View</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>

            {% include 'admin/partials/paginationControl.twig' %}
        </div>
    </div>

    <div class="modal hide fade" id="removeMapping">
        <div class="modal-header">
            <span>Litus Admin</span>
            /Delete Study
        </div>
        <div class="modal-body">
            <p>
                You are about to delete the following study: <b class="title"></b>!
                Please note that this operation cannot be undone!
            </p>
            <p>
                Are you sure you want to continue?
            </p>
            <div class="footer">
                <input type="button" class="delete" value="Yes">
                <input type="button" class="cancel" data-dismiss="modal" value="No">
            </div>
        </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.item .delete').click(openRemoveModal);

            {% if hasAccess('syllabus_admin_study', 'search') %}
            $.searchDatabase({
                defaultPage: $('#default_page'),
                searchDiv: $('#study_search'),
                searchString: $('#searchString'),
                searchField: $('#searchField'),
                searchPage: '{{ url('syllabus_admin_study', {'action': 'manage', 'academicyear': currentAcademicYear.getCode()}) }}',
                url: '{{ url('syllabus_admin_study', {'action': 'search', 'academicyear': currentAcademicYear.getCode()}) }}',
                display: function (data) {
                    $('#study_search table').find('tr.item').remove();
                    $(data).each(function () {
                        $('#study_search table').append(row = $('<tr>', {class: 'item item-' + this.mappingId}));
                        row.append('<td>' + this.title + '</td>')
                            .append('<td>' + this.phase + '</td>')
                            .append(
                                actions = $('<td>', {'class': 'actions'})
                            );

                            {% if hasAccess('syllabus_admin_study', 'delete') %}
                                actions.append('<a href="#" data-title="' + this.title + '" data-id="' + this.mappingId + '" data-url="{{ url('syllabus_admin_study', {'action': 'delete'}) }}' + this.mappingId + '" class="delete">Delete</a>');
                            {% endif %}

                            {% if hasAccess('syllabus_admin_study', 'edit') %}
                                actions.append('<a href="{{ url('syllabus_admin_study') }}edit/' + this.id + '/{{ currentAcademicYear.getCode() }}" class="view">View</a>');
                            {% endif %}
                    });
                    $('.item .delete').unbind('click').click(openRemoveModal);
                    $('#study_search table').change();
                },
                clear: function () {
                    $('#study_search table').find('tr.item').remove();
                }
            });
            {% endif %}
        });

        function openRemoveModal(e) {
            var $this = $(this);

            e.preventDefault();
            var removeMapping = $('#removeMapping');
            removeMapping.find('.title').html($(this).data('title'));
            var id = $this.data('id');
            removeMapping.find('.delete').unbind('click').click(function () {
                console.log($this.data());
                $.post($this.data('url'), function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.study_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeMapping.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeMapping.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.study_removed_error').removeClass('hide');
            $('#removeMapping').modal('hide');
        }
    </script>
{% endblock %}

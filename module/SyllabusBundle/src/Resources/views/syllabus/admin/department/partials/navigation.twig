<header id="controller_header">
    <div class="title"><span class="study">Departments</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('admin_department', 'add') %}
                <li><a {% if 'add' == getParam('action') %} class="active" {% endif %} href="{{ url('admin_department', {'action': 'add', 'academicyear': currentAcademicYear.getCode()}) }}">Add</a></li>
            {% endif %}
            {% if hasAccess('admin_department', 'manage') %}
                <li><a {% if 'manage' == getParam('action') %} class="active" {% endif %} href="{{ url('admin_department', {'academicyear': currentAcademicYear.getCode()}) }}">Manage</a></li>
            {% endif %}
        </ul>
    </nav>
</header>

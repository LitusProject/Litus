{% extends 'site/base.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ publication.getTitle() }} - {{ year.getCode() }}</h1>
    </div>

    <div class="row page">
        <div class="span12">
            {% if pdfs %}
                <h1>{{ translate('PDF Editions') }}</h1>
                <ul class="thumbnails">
                    {% for pdf in pdfs %}
                        <li>
                            <center>
                                <a class="thumbnail span2" style="height: 70px;line-height: 70px" target="_blank" href="/{{ pdf.getUrl() }}">{{ pdf.getTitle() }}</a>
                            </center>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            {% if htmls %}
                <h1>{{ translate('HTML Editions') }}</h1>
                <ul class="thumbnails">
                    {% for html in htmls %}
                        <li>
                            <center>
                                <a class="thumbnail span2" style="height: 70px;line-height: 70px" target="_blank" href="{{ url('edition_html', {'action': 'view', 'id': html.getId()}) }}">{{ html.getTitle() }}</a>
                            </center>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
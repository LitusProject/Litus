{% extends 'site/base.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ publication.getTitle() }} - {{ year.getCode() }}</h1>
    </div>

    <div class="row page">
        <div class="span12">
            {% if pdfs %}
                <h1>{{ translate('PDF Editions') }}</h1>
                <ul class="thumbnails">
                    {% for pdf in pdfs %}
                        <li>
                            <center>
                                <a class="thumbnail span2 archive-item" target="_blank" href="/{{ pdf.getUrl() }}">
                                    {{ pdf.getTitle() }}<br />
                                    <span class="date">({{ dateLocalized(pdf.getDate(), 'd MMM Y') }})</span>
                                </a>
                            </center>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            {% if htmls %}
                <h1>{{ translate('HTML Editions') }}</h1>
                <ul class="thumbnails">
                    {% for html in htmls %}
                        <li>
                            <center>
                                <a class="thumbnail span2 archive-item" target="_blank" href="{{ url('publication_edition_html', {'action': 'view', 'id': html.getId()}) }}">
                                    {{ html.getTitle() }}<br />
                                    <span class="date">({{ dateLocalized(html.getDate(), 'd MMM Y') }})</span>
                                </a>
                            </center>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}
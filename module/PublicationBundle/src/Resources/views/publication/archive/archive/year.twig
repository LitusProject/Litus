{% extends 'site/base.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ publication.getTitle() }} </h1>
    </div>

    <div class="row page">
        <div class="span12">
            <ul class="thumbnails">
                {% for year in years %}
                    <li>
                        <center>
                            <a class="thumbnail span2" style="height: 70px;line-height: 70px" href="{{ url('archive', { 'action': 'view', 'publication': publication.getId(), 'year': year.getId() }) }}">{{ year.getCode() }}</a>
                        </center>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
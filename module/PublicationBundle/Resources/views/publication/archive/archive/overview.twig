{% extends 'site/base.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ translate('Archive') }}</h1>
    </div>

    <div class="row">
        {% for publication in publications %}
            <div class="col-xs-6 col-md-2">
                <div class="thumbnail" style="height: 70px;line-height: 60px;text-align: center">
                    <a href="{{ url('publication_archive', { 'action': 'year', 'publication': publication.getId() }) }}">{{ publication.getTitle() }}</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
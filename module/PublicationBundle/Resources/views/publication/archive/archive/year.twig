{% extends 'site/base.twig' %}

{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>{{ publication.getTitle() }} </h1>
        </div>

        <div class="row">
            {% for year in years %}
                <div class="col-xs-6 col-md-2">
                    <a class="publication-link" href="{{ url('publication_archive', { 'action': 'view', 'publication': publication.getId(), 'year': year.getId() }) }}">{{ year.getCode() }}</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

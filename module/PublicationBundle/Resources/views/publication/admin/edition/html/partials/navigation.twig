<header id="controller_header">
    <div class="title"><span class="html">Publications &raquo; HTML Editions</span></div>

    <nav id="controller_nav">
        <ul>
            {% if hasAccess('publication_admin_edition_html', 'add') %}
                <li><a {% if 'add' == getParam('action') %} class="active" {% endif %} href="{{ url('publication_admin_edition_html', {"action": "add", "id": publication.getId()}) }}">Add</a></li>
            {% endif %}
            {% if hasAccess('publication_admin_edition_html', 'manage') %}
                <li><a {% if 'manage' == getParam('action') %} class="active" {% endif %} href="{{ url('publication_admin_edition_html', {"action": "manage", "id": publication.getId()}) }}">Manage</a></li>
            {% endif %}
            {% if hasAccess('publication_admin_publication', 'manage') %}
                <li><a href="{{ url('publication_admin_publication', {"action": "manage", "id": publication.getId()}) }}">Publications</a></li>
            {% endif %}
        </ul>
    </nav>
</header>

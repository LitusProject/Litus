{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'common/admin/cache/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div id="controller_action">
        <h1>Info</h1>
        {% for key, value in info %}
            <p>{{ key }}: <b>{{ value }}</b></p>
        {% endfor %}

        {% if paginator|length > 0 %}
            <h1>Keys</h1>
            <table>
                <tr>
                    <th>Name</th>
                </tr>
                {% for key in paginator %}
                    <tr>
                        <td>{{ key }}</td>
                    </tr>
                {% endfor %}
            </table>

            {% include 'admin/partials/paginationControl.twig' %}
        {% endif %}
    </div>

    {% if hasAccess('common_admin_cache', 'flush') and flushable %}
        <aside>
            <div class="sidebox">
                <div class="title">Clear Cache</div>
                <div class="content">
                    <p>
                        <i>Please hit the link below to clear the cache!</i>
                    </p>
                    <p>
                        <a href="{{ url('common_admin_cache', {"action": "flush"}) }}">&rarr; Clear Cache</a>
                    </p>
                </div>
            </div>
        </aside>
    {% endif %}
{% endblock %}

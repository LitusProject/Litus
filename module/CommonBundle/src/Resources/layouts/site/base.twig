{{ doctype() }}

<html lang="en">
<head>

    {{ headMeta() }}
	{{ headTitle(translate('Vlaamse Technische Kring Leuven'), 'PREPEND') }}

	{{ headLink() }}
</head>

<body>
    <nav class="navbar navbar-fixed-top main-navbar main-navbar-fixed-top">
    	<div class="navbar-inner main-navbar-inner">
    		<div class="container">
    		    <button type="button"class="btn btn-navbar" data-toggle="collapse" data-target=".main-nav">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="title hidden-desktop" href="#">{{ translate('VTK Leuven vzw') }}</a>
                <div class="main-nav nav-collapse main-nav">
        			<ul class="nav main-nav">
                        {% for item in menu %}
                            {% if 'category' == item.type %}
                                <li class="dropdown">
                                    <a class="dropdown-toggle highlighted" data-toggle="dropdown" href="#">
                                        {{ item.name }} <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        {% for page in item.items %}
                                            {% if hasAccess('page', 'view') %}
                                                <li><a href="{{ url('page', {"name": page.name}) }}">{{ page.title }}</a></li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endif %}
                        {% endfor %}
        			</ul>
        		</div>
        		<ul class="nav pull-right lang-nav visible-desktop">
        		    <li class="dropdown" id="langDropdown">
        			    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        			        {{ translate('Language') }} <span class="caret"></span>
        		        </a>
        		        <ul class="dropdown-menu">
        		            {% for language in languages %}
        			            <li><a href="#">{{ language.getName() }}</a></li>
        		            {% endfor %}
        		        </ul>
        			</li>
        		</ul>
        		<ul class="nav pull-right auth-nav visible-desktop">
        		    <li class="dropdown" id="loginDropdown">
        			    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        			        {{ translate('Login') }} <span class="caret"></span>
        		        </a>
        		        <ul class="dropdown-menu">
        		        	<li style="text-align: center;">
			                	<a class="btn btn-info" href="{{ shibbolethUrl }}">{% autoescape false %}{{ translate('KU Leuven&mdash;Central Login') }}{% endautoescape %}</a>
        		        	</li>
                            <li class="divider"></li>
        		            <li>
        		                {% do loginForm.prepare() %}
                                {% autoescape false %}
                                    {% set buttons = [] %}
                                    {{ form().openTag(loginForm) }}
                                        {% for element in loginForm.getElements() %}
                                            {% if element.getAttribute('type') == 'submit' or element.getAttribute('type') == 'reset' %}
                                                {{ formElement(element) }}
                                            {% elseif element.getAttribute('type') == 'checkbox' %}
                                                <div class="remember_me">
                                                    <label>
                                                        {{ formElement(element) }}
                                                        {% if element.getLabel() != '' %}{{ translate(element.getLabel()) }}{% endif %}
                                                    </label>
                                                </div>
                                            {% else %}
                                                <div class="control-group {% if element.getMessages()|length > 0 %}error{% endif %}">
                                                    <label class="control-label">{% if element.getLabel() != '' %}{{ translate(element.getLabel()) }}{% endif %}</label>
                                                    <div class="controls">
                                                        <div>{{ formElement(element) }}</div>
                                                        {% if element.getMessages()|length > 0 %}
                                                            <div class="help-inline">
                                                                {{ formElementErrors(element) }}
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {{ form().closeTag() }}
                                {% endautoescape %}
        		            </li>
        		        </ul>
        			</li>
        		</ul>
    		</div>
    	</div>
    </nav>

    <div id="page">
        <header>
        	<div class="inner">
        		<div class="container">
        			<img class="siteLogo" src="/_site/img/logo.png" />
        			<h1 class="siteName">{{ translate('Vlaamse Technische Kring Leuven') }}</h1>

        			<div id="carouselHeader" class="carousel slide visible-desktop">
                        <div class="carousel-inner">
                            <div class="active item">
                                <img src="http://twitter.github.com/bootstrap/assets/img/bootstrap-mdo-sfmoma-01.jpg" alt="">
                            </div>
                            <div class="item">
                                <img src="http://twitter.github.com/bootstrap/assets/img/bootstrap-mdo-sfmoma-02.jpg" alt="">
                            </div>
                            <div class="item">
                                <img src="http://twitter.github.com/bootstrap/assets/img/bootstrap-mdo-sfmoma-03.jpg" alt="">
                            </div>
                        </div>
                        <a class="carousel-control left" href="#carouselHeader" data-slide="prev">&lsaquo;</a>
                        <a class="carousel-control right" href="#carouselHeader" data-slide="next">&rsaquo;</a>
        			</div>
        		</div>
        	</div>
        </header>

        <div id="content">
            <div class="container">
                {% include 'prof/partials/flashMessenger.twig' %}

            	{% block content %} {% endblock %}
            </div>
        </div>
    </div>

    <footer>
    	<div class="light">
    		<div class="container">
		        <div class="row-fluid">
		        	<span class="span3">
		        		<span class="title">{{ translate('Links') }}</span>
		        	</span>
		        	<span class="span9">
		        		<span class="title">{{ translate('Partners') }}</span>
		        	</span>
		        </div>
		    </div>
	    </div>

        <div class="container bottom">
        	<span class="title">
        		&copy; 2012 {{ translate('Vlaamse Technische Kring vzw') }}
        	</span>

        	<span class="social">
        		<a href="http://facebook.com/vtk"><img src="/_site/img/facebook.png" /></a>
        		<a href="http://twitter.com/vtk_leuven"><img src="/_site/img/twitter.png" /></a>
        	</span>
        </div>
    </footer>

    {{ inlineScript() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('.dropdown form').on('click', function (e) {
                e.stopPropagation();
            });

            $('.carousel').carousel();
        });
    </script>

    {% block content_script %} {% endblock %}

</body>
</html>

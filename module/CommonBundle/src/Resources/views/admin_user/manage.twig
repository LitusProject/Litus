{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_user/partials/navigation.twig' %}
	
	{% include 'admin/partials/flashMessenger.twig' %}
	<div class="flashmessage success_message full_width user_removed_success" style="display: none;">
		<div class="title">Success</div>
		<div class="content">
			<p>The user was successfully removed!</p>
		</div>
	</div>
	<div class="flashmessage error_message full_width user_removed_error" style="display: none;">
		<div class="title">Error</div>
		<div class="content">
			<p>An error occurred while trying to delete a user.</p>
		</div>
	</div>

	<div id="controller_action">
		<div id="user_search" style="display: none;">
			<div style="padding: 4px; text-align: right">
				Search: 
				<select id="searchField">
					<option value="username">Username</option>
					<option value="name">Name</option>
				</select>
				is
				<input type="text" id="searchString" size="30" />
			</div>
			
			<table class="full_width">
		    	<tr>
		        	<th>Username</th>
		        	<th width="150px">Name</th>
		        	<th width="175px">E-mail</th>
		        	<th width="120px">Action</th>
				</tr>
			</table>
		</div>
		
		<div id="default_page">
		    <table class="full_width">
		        <thead>
		            <tr>
		                <th>Username</th>
		                <th width="150px">Name</th>
		                <th width="175px">E-mail</th>
		                <th width="120px">Action</th>
		            </tr>
		        </thead>
		
		        <tbody>
		            {% for user in paginator %}
		                <tr class="item">
		                    <td>{{ user.getUsername() }}</td>
		                    <td>{{ user.getFullName() }}</td>
		                    <td>{{ user.getEmail() }}</td>
		                    <td>
								<a href="{{ url('admin_user', {"action": "edit", "id": user.getId()}) }}" class="edit">Edit</a></li>
								<a href="#" class="delete" data-id="{{ user.getId() }}" data-fullname="{{ user.getFullName() }}">Delete</a>
		                    </td>
		                </tr>
		            {% endfor %}
		        </tbody>
		    </table>
	
			{% include 'admin/partials/paginationControl.twig' %}
		</div>
	</div>
	
	<div class="modal hide fade" id="removeUser">
		<div class="modal-header">
			<span>Litus Admin</span>
			/User Delete
		</div>
		<div class="modal-body">
			<p>
				You are about to delete the following user: <b class="fullname"></b>?
				Please note that this operation cannot be undone!
			</p>
			<p>
				Are you sure you want to continue?
			</p>
			<div class="footer">
				<input type="button" class="delete" value="Yes">
				<input type="button" class="cancel" value="No">
			</div>
		</div>
	</div>
{% endblock %}

{% block controller_script %}
	<script type="text/javascript">
		$(document).ready(function () {
			$.searchDatabase({
				defaultPage: $('#default_page'),
				searchDiv: $('#user_search'),
				searchString: $('#searchString'),
				searchField: $('#searchField'),
				url: '{{ url('admin_user_search') }}',
				display: function (data) {
					$('#user_search table').find('tr.item').remove();
					$(data).each(function () {
						$('#user_search table').append(row = $('<tr>', {class: 'item'}));
						row.append('<td>' + this.username + '</td>')
							.append('<td>' + this.fullName + '</td>')
							.append('<td>' + this.email + '</td>')
							.append(
								$('<td>')
									.append('<a href="{{ url('admin_user', {"action": "edit"}) }}/' + this.id + '" class="edit">Edit</a>')
									.append(deleteButton = $('<a href="#" class="delete">Delete</a>'))
								);
							deleteButton.data({
								id: this.id,
								fullname: this.fullName
							});
					});
					$('#user_search .delete').click(openModal);
				},
				clear: function () {
					$('#user_search table').find('tr.item').remove();
				}
			});
			
			$('.item .delete').click(openModal);
		});
		
		function openModal(e) {
			var $this = $(this);

			e.preventDefault();
			var removeUser = $('#removeUser');
			removeUser.find('.fullname').html($(this).data('fullname'));
			removeUser.find('.cancel').one('click', function () {
				removeUser.modal('hide');
			});
			removeUser.find('.delete').unbind('click').click(function () {
				$.post('{{ url('admin_user', {"action": "delete"})}}/' + $this.data('id'), function  (data) {
					$('.flashmessage').hide();
					$('.user_removed_success').show();
					$this.parent().parent().remove();
					removeUser.modal('hide');
				}, 'json').error(function () {
					$('.flashmessage').hide();
					$('.user_removed_error').show();
					removeUser.modal('hide');
				});
			});
			removeUser.modal();
		}
	</script>
{% endblock %}
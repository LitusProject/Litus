{% extends 'admin/base.twig' %}

{% block content %}
	{% include 'admin_user/partials/navigation.twig' %}
	
	{% include 'admin/partials/flashMessenger.twig' %}

	<div id="controller_action">
		<div class="flashmessage error_message full_width">
	        <div class="title">Warning</div>
	        <div class="content">
	            <p>
	                You are about to delete the following user: <b>{{ user.getUsername() }}</b> ({{ user.getFullName() }})?
	                Please note that this operation cannot be undone!
	            </p>
	
	            <p>
	                Are you sure you want to continue?<br />
	                <a href="{{ url('admin_user', {"action": "delete", "id": getParam('id'), "confirm": "1"}) }}">Yes</a>
	                <a href="{{ url('admin_user', {"action": "delete", "id": getParam('id'), "confirm": "0"}) }}">No</a>
	            </p>
	        </div>
	    </div>
	</div>
{% endblock %}
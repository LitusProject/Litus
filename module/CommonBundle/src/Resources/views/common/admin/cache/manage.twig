{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'admin/partials/flashMessenger.twig' %}

    <div id="controller_action">
        <h1>Cache</h1>
        <p>Currently cached:</p>
        <table>
            <tr>
                <th>Name</th>
            </tr>
            {% for item in cache.getIterator() %}
                <tr>
                    <td>{{ item }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>

    {% if hasAccess('admin_cache', 'flush') %}
        <aside>
            <div class="sidebox">
                <div class="title">Clear Cache</div>
                <div class="content">
                    <p>
                        <i>Please hit the link below to clear the cache!</i>
                    </p>
                    <p>
                        <a href="{{ url('admin_cache', {"action": "flush"}) }}">&rarr; Clear Cache</a>
                    </p>
                </div>
            </div>
        </aside>
    {% endif %}
{% endblock %}

                        removeRole.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeRole.modal();
        }

		function errorRemove() {
		    $('.flashmessage').addClass('hide');
		    $('.role_removed_error').removeClass('hide');
		    $('#removeRole').modal('hide');
		}
	</script>
{% endblock %}

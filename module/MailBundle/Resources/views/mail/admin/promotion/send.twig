{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'mail/admin/promotion/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div id="controller_action">
        <div class="flashmessage warning_message full_width">
            <div class="title">Warning</div>
            <div class="content">
                This mail will be sent to everyone of the selected fields.
            </div>
        </div>

        {% import 'admin/partials/form.twig' as forms %}
        {{ forms.renderForm(form) }}
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#controller_action form input[type=submit]').click(function () {
                if ($(this).prop('disabled'))
                    return false;

                $(this).prop('disabled', true);
                $(this).css('color', '#ccc');

                $this = $(this);
                setTimeout(function () {
                    $this.closest('form').submit();
                }, 10);
            });

            $('[name="selected_message[stored_message]"]').change(function () {
                $('#compose_message').toggle($(this).val() == '');
            }).change();
        });
    </script>
{% endblock %}

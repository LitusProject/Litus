{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'mail/admin/mailing-list/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div class="flashmessage success_message full_width list_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The list was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width list_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete a list.</p>
        </div>
    </div>

    <div id="controller_action">

        <div id="normal_page">

            <table class="full_width manage">
                <tr>
                    <th>Name</th>
                    <th width="70px">Actions</th>
                </tr>

                {% for list in paginator %}

                    <tr class="item item-{{ list.getId() }}">
                        <td>{{ list.getName() }}</td>
                        <td class="actions">
                            {% if hasAccess('admin_mail_list', 'entries') %}
                                <a href="{{ url('admin_mail_list', {"action": "entries", "id": list.getId()}) }}" class="mail_list_entry">Entries</a>
                            {% endif %}
                            {% if hasAccess('admin_mail_list', 'admins') and list.canBeEditedBy(person, entityManager, true) %}
                                <a href="{{ url('admin_mail_list', {"action": "admins", "id": list.getId()}) }}" class="mail_list_entry">Admins</a>
                            {% endif %}
                            {% if hasAccess('admin_mail_list', 'delete') %}
                                <a href="#" class="delete" data-id="{{ list.getId() }}" data-name="{{ list.getName() }}">Delete</a>
                            {% endif %}
                        </td>
                    </tr>

                {% endfor %}

            </table>

        </div>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>

    <div class="modal hide fade" id="removeList">
        <div class="modal-header">
            <span>Litus Admin</span>
            /Delete List
        </div>
        <div class="modal-body">
            <p>
                You are about to delete the following list: <b class="listName"></b>!
                Please note that this operation cannot be undone!
            </p>
            <p>
                Are you sure you want to continue?
            </p>
            <div class="footer">
                <input type="button" class="delete" value="Yes">
                <input type="button" class="cancel" data-dismiss="modal" value="No">
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">

        $(document).ready(function () {

            $('.item .delete').click(openModal);

        });

        function openModal(e) {
            var $this = $(this);

            e.preventDefault();
            var removeList = $('#removeList');
            removeList.find('.listName').html($(this).data('name'));
            var id = $this.data('id');
            removeList.find('.delete').unbind('click').click(function () {
                $.post('{{ url('admin_mail_list', {"action": "delete"})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.list_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeList.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeList.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.list_removed_error').removeClass('hide');
            $('#removeList').modal('hide');
        }

    </script>
{% endblock %}
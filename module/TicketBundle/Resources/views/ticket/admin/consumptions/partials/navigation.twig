<header id="controller_header">
    <div class="title"><span class="consumptions">Consumptions</span></div>

    <nav id="controller_nav">
        <ul>
            {%  if hasAccess('ticket_admin_consumptions', 'transactions') %}
                <li><a {% if 'transactions' == getParam('action') %} class = 'active' {%  endif %} href="{{ url('ticket_admin_consumptions', {"action": "transactions"}) }}"> Transactions </a></li>
            {%  endif %}
            {%  if hasAccess('ticket_admin_consumptions', 'total-transactions') %}
                <li><a {% if 'total-transactions' == getParam('action') %} class = 'active' {%  endif %} href="{{ url('ticket_admin_consumptions', {"action": "total-transactions"}) }}"> Total Transactions </a></li>
            {%  endif %}
            {%  if hasAccess('ticket_admin_consumptions', 'add') %}
                <li><a {% if 'add' == getParam('action') %} class = 'active' {%  endif %} href="{{ url('ticket_admin_consumptions', {"action": "add"}) }}"> Add </a></li>
            {%  endif %}
            {% if hasAccess('ticket_admin_consumptions', 'manage') %}
                <li><a {% if 'manage' == getParam('action') or 'edit' == getParam('action') or 'delete' == getParam('action') %} class="active" {% endif %}
                            href="{{ url('ticket_admin_consumptions', {"action": "manage"}) }}">Manage</a></li>
            {% endif %}
            {% if hasAccess('ticket_admin_consumptions', 'csv') %}
                <li><a {% if 'csv' == getParam('action') %} class="active" {% endif %} href="{{ url("ticket_admin_consumptions", {"action": "csv"}) }}">Add from Csv</a></li>
            {% endif %}
            {% if hasAccess('ticket_admin_consumptions', 'template') %}
                <li><a {% if 'template' == getParam('action') %} class="active" {% endif %} href="{{ url("ticket_admin_consumptions", {"action": "template"}) }}">Csv template</a></li>
            {% endif %}
        </ul>
    </nav>
</header>